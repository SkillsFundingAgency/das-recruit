@model ReferredVacancyViewModel
@{ 
    ViewBag.Vpv = "/recruitment/employer/page-vacancy-referred";
    ViewBag.Title = "View your advert";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl" id="vacancy-header">
            @Model.Title
            <span class="govuk-caption-xl">@Model.EmployerName</span>
        </h1>
    </div>
</div>

<partial name="@PartialNames.NonEditableVacancyDisplay" model="Model" />

<div class="govuk-form-group inline">
    <div class="govuk-form-group govuk-!-margin-top-6">
        <a asp-route="@RouteNames.Vacancies_Get" asp-route-employerAccountId="@Model.EmployerAccountId" class="govuk-button">Return to dashboard</a>
    </div>
</div>