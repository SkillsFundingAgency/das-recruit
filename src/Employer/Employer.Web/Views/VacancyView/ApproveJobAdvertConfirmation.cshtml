@model Esfa.Recruit.Employer.Web.ViewModels.VacancyView.ApproveJobAdvertConfirmationViewModel

@{ ViewBag.Vpv = "/recruitment/employer/approve-job-advert-confirmation";
ViewBag.Title = "Are you sure you want to approve this job advert"; }
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="@PartialNames.ValidationSummary" model='new ValidationSummaryViewModel { ModelState = ViewData.ModelState }' />
        <div>
            <h1 class="govuk-heading-xl govuk-!-margin-bottom-6">
                Are you sure you want to approve this job advert?
            </h1>          
        </div>
        <div class="govuk-inset-text">
            <p>We'll do a final review and post it on 'Find an apprenticeship'.</p>
        </div>
        <form asp-route="@RouteNames.ApproveJobAdvertConfirmation_Post">
            @*@Html.HiddenFor(model => model.Outcome)
            @Html.HiddenFor(model => model.CandidateFeedback)
            @Html.HiddenFor(model => model.Name)*@
            <div esfa-validation-marker-for="ApproveJobAdvert" class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <span esfa-validation-message-for="ApproveJobAdvert" class="govuk-error-message"></span>
                    <div class="govuk-radios">
                        <div class="govuk-radios__item">
                            <input asp-for="ApproveJobAdvert" class="govuk-radios__input" id="approve-job-advert-yes" type="radio" value="true">
                            <label for="approve-job-advert-yes" class="govuk-label govuk-radios__label">Yes</label>
                        </div>
                        <div class="govuk-radios__item">
                            <input asp-for="ApproveJobAdvert" class="govuk-radios__input" id="approve-job-advert-no" type="radio" value="false">
                            <label for="approve-job-advert-no" class="govuk-label govuk-radios__label">No</label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="govuk-form-group">
                <input type="submit" value="Continue" class="govuk-button" />
            </div>
        </form> 
    </div>
</div>