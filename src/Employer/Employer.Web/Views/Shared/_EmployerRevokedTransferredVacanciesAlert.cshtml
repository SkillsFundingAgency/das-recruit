@using Esfa.Recruit.Vacancies.Client.Domain.Entities
@model Esfa.Recruit.Shared.Web.ViewModels.Alerts.EmployerTransferredVacanciesAlertViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="info-summary">
            <p class="govuk-body">
                <a asp-route="@RouteNames.Vacancies_Get" asp-route-filter="@FilteringOptions.Transferred" class="govuk-link">@Model.CountCaption</a> from
                <span class="govuk-!-font-weight-bold">@Model.ProviderNamesCaption</span> after you turned off their permissions.
            </p>
            <p class="govuk-body">Live adverts that have been transferred are now closed. Adverts sent for review have been sent back to draft. You can clone closed adverts if you want to republish them.</p>
            <form asp-route="@RouteNames.Alerts_Dismiss_Post">
                <p class="govuk-body govuk-!-margin-bottom-0">
                    @{ string returnUrl = ViewContext.HttpContext.Request.Path + ViewContext.HttpContext.Request.QueryString; }
                    <input name="@nameof(AlertDismissalEditModel.ReturnUrl)" value="@returnUrl" type="hidden" />
                    <input name="@nameof(AlertDismissalEditModel.AlertType)" value="@AlertType.TransferredVacanciesEmployerRevokedPermission" type="hidden" />
                    <button type="submit" class="button-fake-link govuk-link govuk-link--no-visited-state">Hide notification</button>
                </p>
            </form>
        </div>
    </div>
</div>
