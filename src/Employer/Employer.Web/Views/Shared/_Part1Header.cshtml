@{
    const string ShowExampleText = "Show example summary";
    const string HideExampleText = "Hide example";
    var hasShowVacancyCookie = ViewContext.HttpContext.Request.Cookies.ContainsKey("showExampleVacancy");
    var exampleVacancyStyleValue = hasShowVacancyCookie ? string.Empty : "display: none";
    var exampleLinkText = hasShowVacancyCookie ? HideExampleText : ShowExampleText;
}
<div id="example-vacancy-js-container" class="hide">
    <a href="#example_link" id="example_link">@exampleLinkText</a>

    <div id="example_vacancy" class="example-advert" style="@exampleVacancyStyleValue">
        @Html.Partial("_ExampleVacancyPartial")
    </div>
</div>
<noscript>
    <div class="example-advert">
        @Html.Partial("_ExampleVacancyPartial")
    </div>
</noscript>
<br><br>

<script>
    $(function () {
        sfa.hookupExampleVacancyToggle("@ShowExampleText", "@HideExampleText");
    });
</script>