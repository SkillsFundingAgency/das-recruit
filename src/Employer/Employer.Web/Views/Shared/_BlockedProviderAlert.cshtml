@using Esfa.Recruit.Vacancies.Client.Domain.Entities
@model Esfa.Recruit.Shared.Web.ViewModels.Alerts.BlockedProviderAlertViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="warning-summary">
            <p class="govuk-body">
                <a asp-route="@RouteNames.Vacancies_Get" asp-route-filter="@FilteringOptions.Transferred" class="govuk-link">@Model.CountCaption</a> from <span class="govuk-!-font-weight-bold">@Model.BlockedProviderNamesCaption</span> because they’re no longer able to manage or recruit apprentices.
</p>

            <p>Any transferred live adverts have been closed. Transferred adverts pending review have been returned to draft.</p>

            <p class="govuk-body">If you need to discuss this further, you can contact our helpdesk on @RecruitViewConstants.HelpdeskPhoneNumber.</p>
            <form asp-route="@RouteNames.Alerts_Dismiss_Post">
                <p class="govuk-body govuk-!-margin-bottom-0">
                    @{ string returnUrl = ViewContext.HttpContext.Request.Path + ViewContext.HttpContext.Request.QueryString; }
                    <input name="@nameof(AlertDismissalEditModel.ReturnUrl)" value="@returnUrl" type="hidden" />
                    <input name="@nameof(AlertDismissalEditModel.AlertType)" value="@AlertType.ClosedVacanciesBlockedProvider" type="hidden" />
                    <button type="submit" class="button-fake-link govuk-link govuk-link--no-visited-state">Hide notification</button>
                </p>
            </form>
        </div>
    </div>
</div>
