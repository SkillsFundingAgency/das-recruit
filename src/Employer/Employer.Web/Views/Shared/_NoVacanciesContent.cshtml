@using Microsoft.Extensions.Options
@model Esfa.Recruit.Employer.Web.RouteModel.VacancyRouteModel
@inject IOptions<ExternalLinksConfiguration> ExternalLinks
@inject SFA.DAS.Employer.Shared.UI.UrlBuilder LinkGenerator

@{
    ViewBag.ZenDeskLabel = "recruit-recruitment";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Create an advert for Find an apprenticeship</h1>
        <p class="govuk-body">
            Advertise an apprenticeship in England on 
            <a href="@ExternalLinks.Value.FindAnApprenticeshipUrl" class="govuk-link govuk-link--no-visited-state" target="_blank">Find an apprenticeship (opens in a new tab)</a>.
        </p>
        <p class="govuk-body">
            You can accept applications using Find an apprenticeship or add a link to your own application website.
        </p>
        
        <h2 class="govuk-heading-m">Before creating an advert</h2>
        
        <p class="govuk-body">Make sure you have:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>
                <a href="@ExternalLinks.Value.FindApprenticeshipTrainingUrl" class="govuk-link">found apprenticeship training</a>
                and agreed training with a provider
            </li>
            <li>
                <a href="@LinkGenerator.ReservationsLink("Dashboard", Model.EmployerAccountId)" class="govuk-link">reserved funding</a>
                if you do not pay the apprenticeship levy
            </li>
            <li>decided details such as the wage and working hours</li>
        </ul>

        <a asp-route="@RouteNames.EmployerTaskListCreateGet" asp-route-employerAccountId="@Model.EmployerAccountId" role="button" class="govuk-button govuk-button--start govuk-!-margin-bottom-8 govuk-!-margin-top-2" esfa-automation="create-vacancy">
            Create advert
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
            </svg>
        </a>

        <h2 class="govuk-heading-m govuk-!-padding-bottom-5">Other ways to create adverts for Find an apprenticeship</h2>

        <h3 class="govuk-heading-s govuk-!-margin-bottom-2">Let a training provider create adverts for you</h3>
        <p class="govuk-body">
            <a asp-route="@RouteNames.YourTrainingProviderPermission" asp-route-employerAccountId="@Model.EmployerAccountId" class="govuk-link">Change the permissions you give training providers</a> 
            to allow them to make adverts for you. You can review adverts before they go live.
        </p>
        
        <h3 class="govuk-heading-s govuk-!-margin-bottom-2">Use APIs to submit adverts using your own system</h3>
        <p class="govuk-body">
            If you're working with a software developer, you can connect your system to Find an apprenticeship by 
            <a asp-route="@RouteNames.EmployerRecruitmentApi" asp-route-employerAccountId="@Model.EmployerAccountId" class="govuk-link">using our APIs</a>.
        </p>
    </div>
</div>
