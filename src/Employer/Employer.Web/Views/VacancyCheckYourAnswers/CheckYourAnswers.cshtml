@section BackLink {
    @if (Model.CanReview || Model.Review.HasBeenReviewed)
    {
        <a asp-route="@RouteNames.Dashboard_Get" asp-route-employerAccountId="@Model.EmployerAccountId"
    esfa-automation="link-back" class="govuk-back-link">Return to dashboard</a>
    }
    else
    {
        <a asp-route="@RouteNames.EmployerTaskListGet" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-back"
    class="govuk-back-link">Back to task list</a>
    }
    }

    <div asp-show="@Model.Review.HasBeenReviewed">
        <partial name="@PartialNames.ReviewSummary" for="Review" />
    </div>
    @if (!Model.CanHideValidationSummary)
{
    <div class="govuk-error-summary review-summary govuk-!-margin-top-0" role="alert" tabindex="-1">
    <h2 class="govuk-error-summary__title">
        There is a problem
    </h2>
    <div class="govuk-error-summary__body">
        <ul class="govuk-list govuk-error-summary__list">
            @foreach (var stateItem in Model.ValidationErrors.ModelState.Where(msi => msi.Value.ValidationState ==
               ModelValidationState.Invalid)
               .OrderBy(x => Model.OrderedFieldNames.IndexOf(x.Key)))
                {
                    <li>
                        @if (!string.IsNullOrEmpty(stateItem.Value.Errors.FirstOrDefault()?.ErrorMessage))
                        {
                            <a asp-fragment="@stateItem.Key" asp-all-route-data="@Model.RouteDictionary"
                                class="govuk-link">@stateItem.Value.Errors.FirstOrDefault()?.ErrorMessage</a>
                        }
                        else
                        {
                            <span>@stateItem.Value.Errors.FirstOrDefault()?.ErrorMessage</span>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
}

