@using Esfa.Recruit.Vacancies.Client.Domain.Entities
@using Esfa.Recruit.Shared.Web.Mappers
@model Esfa.Recruit.Employer.Web.ViewModels.VacancyPreview.VacancyPreviewViewModel

@{ ViewBag.GaData.Vpv = "/recruitment/employer/check-your-answers"; }

@section BackLink {
    @if (Model.CanReview)
    {
        <a asp-route="@RouteNames.Dashboard_Get" esfa-automation="link-back" class="govuk-back-link">Return to dashboard</a>
    }
    else
    {
        <a asp-route="@RouteNames.EmployerTaskListGet" esfa-automation="link-back" class="govuk-back-link">Back to task list</a>    
    }
    
}

@if (Model.Status == VacancyStatus.Referred)
{
    <div class="govuk-error-summary review-summary govuk-!-margin-top-0" role="alert" tabindex="-1">
        <h2 class="govuk-error-summary__title">
            Edits needed
        </h2>
        <div class="govuk-error-summary__body">
            <p class="govuk-body">Call us on @RecruitViewConstants.HelpdeskPhoneNumber and select the employer option if you need to discuss any of our advert review comments.</p>
            <p class="govuk-body">@Model.Review.ReviewerComments</p>    
            <ul class="govuk-list govuk-error-summary__list">
                @foreach (var fieldIndicator in Model.Review.FieldIndicators)
                {
                    if (!string.IsNullOrWhiteSpace(fieldIndicator.ManualQaText))
                    {
                        <li><a asp-fragment="@fieldIndicator.Anchor" class="govuk-link">@fieldIndicator.ManualQaText</a></li>
                    }

                    foreach (var errorText in fieldIndicator.AutoQaTexts)
                    {
                        <li><a asp-fragment="@fieldIndicator.Anchor" class="govuk-link">@errorText</a></li>
                    }
                }
            </ul>
        </div>
    </div>
}


