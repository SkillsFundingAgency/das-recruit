@using Esfa.Recruit.Vacancies.Client.Domain.Entities
@using Esfa.Recruit.Shared.Web.Mappers
@model Esfa.Recruit.Employer.Web.ViewModels.VacancyPreview.VacancyPreviewViewModel

@{ ViewBag.GaData.Vpv = "/recruitment/employer/check-your-answers"; }

@section BackLink {
    <a asp-route="@RouteNames.EmployerTaskListGet" esfa-automation="link-back" class="govuk-back-link">Back to task list</a>
}

@if (Model.Status == VacancyStatus.Referred)
{
    <div class="govuk-error-summary review-summary govuk-!-margin-top-0" role="alert" tabindex="-1">
        <h2 class="govuk-error-summary__title">
            <img src="/img/red-cross.png" class="red-cross-logo" alt="red cross" no-cdn />Edits needed
        </h2>
        <div class="govuk-error-summary__body">
            <p class="govuk-body">Call us on @RecruitViewConstants.HelpdeskPhoneNumber and select the employer option if you need to discuss any of our advert review comments.</p>
            <p class="govuk-body">@Model.Review.ReviewerComments</p>    
            <ul class="govuk-list govuk-error-summary__list">
                @foreach (var fieldIndicator in Model.Review.FieldIndicators)
                {
                    if (!string.IsNullOrWhiteSpace(fieldIndicator.ManualQaText))
                    {
                        <li><a asp-fragment="@fieldIndicator.Anchor" class="govuk-link">@fieldIndicator.ManualQaText</a></li>
                    }

                    foreach (var errorText in fieldIndicator.AutoQaTexts)
                    {
                        <li><a asp-fragment="@fieldIndicator.Anchor" class="govuk-link">@errorText</a></li>
                    }
                }
            </ul>
        </div>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">  
        <h1 class="govuk-heading-xl">
            Check your answers before submitting your advert
        </h1>
        <h2 class="govuk-heading-m">Advert summary</h2>
        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.TitleSectionState">Advert title</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Model.Title
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.Title_Get">Change<span class="govuk-visually-hidden"> advert title</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.Title" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            @if (Model.AccountLegalEntityCount > 1)
            {
                <div class="govuk-summary-list__row">
                    <dt-review-section section-state="@Model.EmployerNameSectionState">Name of organisation</dt-review-section>
                    <dd class="govuk-summary-list__value">
                        @Model.EmployerName
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.Employer_Get">Change<span class="govuk-visually-hidden"> name of organisation</span></a>
                        <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.EmployerName" tag-name="strong" model="@Model"/>
                    </dd>
                </div>
            }
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.TrainingSectionState">Training course</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Model.TrainingTitle
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.Training_Get">Change<span class="govuk-visually-hidden"> training course</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.Training" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.ProviderSectionState">Training provider</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Model.ProviderName
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.TrainingProvider_Select_Get">Change<span class="govuk-visually-hidden"> training provider</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.Provider" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.ShortDescriptionSectionState">Summary of the apprenticeship</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Model.ShortDescription
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.ShortDescription_Get">Change<span class="govuk-visually-hidden"> summary of the apprenticeship</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.ShortDescription" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row govuk-summary-list--no-border">
                <dt-review-section section-state="@Model.DescriptionsSectionState">What will the apprentice be doing?</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Html.Raw(Model.VacancyDescription)
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.VacancyDescription_Index_Get">Change<span class="govuk-visually-hidden"> about the apprenticeship</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.VacancyDescription" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row govuk-summary-list--no-border">
                <dt-review-section section-state="@Model.DescriptionsSectionState">Training and qualification levels</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Html.Raw(Model.TrainingDescription)
                </dd>
                <dd class="govuk-summary-list__actions">
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.TrainingDescription" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.DescriptionsSectionState">Future prospects</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Html.Raw(Model.OutcomeDescription)
                </dd>
                <dd class="govuk-summary-list__actions">
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.FutureProspects" tag-name="strong" model="@Model"/>
                </dd>
            </div>
        </dl>
    
        <h2 class="govuk-heading-m">Employment details</h2>
        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
            <div class="govuk-summary-list__row govuk-summary-list--no-border">
                <dt-review-section section-state="@Model.ClosingDateSectionState">Application closing date</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Model.ClosingDate
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.Dates_Get">Change<span class="govuk-visually-hidden"> important date</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.ClosingDate" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row govuk-summary-list--no-border">
                <dt-review-section section-state="@Model.PossibleStartDateSectionState">Apprenticeship start date</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Model.PossibleStartDate
                </dd>
                <dd class="govuk-summary-list__actions">
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.PossibleStartDate" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.DisabilityConfidentSectionState">Disability Confident Employer?</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @(Model.IsDisabilityConfident ? "Yes" : "No")
                </dd>
                <dd class="govuk-summary-list__actions">
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.DisabilityConfident" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row govuk-summary-list--no-border">
                <dt-review-section section-state="@Model.WageTextSectionState">Pay rate</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Model.WageText a year
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.Wage_Get">Change<span class="govuk-visually-hidden"> wage</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.Wage" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.WageTextSectionState">Extra information about pay (optional)</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @(Model.HasWageInfo ? Model.WageInfo : "None")
                </dd>
                <dd class="govuk-summary-list__actions">
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.WageAdditionalInfo" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row govuk-summary-list--no-border">
                <dt class="govuk-summary-list__key">
                    Duration
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.ExpectedDuration
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.Duration_Get">Change<span class="govuk-visually-hidden"> duration</span></a>
                </dd>
            </div>
            <div class="govuk-summary-list__row govuk-summary-list--no-border">
                <dt-review-section section-state="@Model.WorkingWeekSectionState">Working week details</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Model.WorkingWeekDescription
                </dd>
                <dd class="govuk-summary-list__actions">
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.WorkingWeekDescription" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.WorkingWeekSectionState">Hours per week</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Model.HoursPerWeek
                </dd>
                <dd class="govuk-summary-list__actions">
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.WorkingWeekHours" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.NumberOfPositionsSectionState">Number of positions</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Model.NumberOfPositions available
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.NumberOfPositions_Get">Change<span class="govuk-visually-hidden"> number of positions</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.NumberOfPositions" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.EmployerAddressSectionState">Address</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @string.Join(", ", Model.EmployerAddressElements?.Where(s => !string.IsNullOrWhiteSpace(s)).Select(s => s.Trim()) ?? new string[0])
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.Location_Get">Change<span class="govuk-visually-hidden"> location</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.EmployerAddress" tag-name="strong" model="@Model"/>
                </dd>
            </div>
        </dl>
        <h2 class="govuk-heading-m">Skills and qualifications</h2>
        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.SkillsSectionState">Skills</dt-review-section>
                <dd class="govuk-summary-list__value">
                    <ul class="govuk-list govuk-list--bullet">
                        @foreach (var skill in Model.Skills)
                        {
                            <li>@skill</li>
                        }
                    </ul>
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.Skills_Get">Change<span class="govuk-visually-hidden"> skills</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.Skills" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.QualificationsSectionState">Qualifications</dt-review-section>
                <dd class="govuk-summary-list__value">
                    <ul class="govuk-list govuk-list--bullet">
                        @foreach (var qual in Model.Qualifications)
                        {
                            <li>@qual</li>
                        }
                    </ul>
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.Qualifications_Get">Change<span class="govuk-visually-hidden"> qualifications</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.Qualifications" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.ThingsToConsiderSectionState">Other things to consider</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @if (string.IsNullOrEmpty(Model.ThingsToConsider))
                    {
                        @:None
                    }
                    else
                    {
                        @Model.ThingsToConsider
                    }

                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.Considerations_Get">Change<span class="govuk-visually-hidden"> considerations</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.ThingsToConsider" tag-name="strong" model="@Model"/>
                </dd>
            </div>
        </dl>
        <h2 class="govuk-heading-m">About the employer</h2>
        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.EmployerNameSectionState">Name of organisation</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Model.EmployerName
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.EmployerName_Get">Change<span class="govuk-visually-hidden"> name of organisation</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.EmployerName" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row govuk-summary-list--no-border">
                <dt-review-section section-state="@Model.EmployerDescriptionSectionState">Employer information</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Model.EmployerDescription
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.AboutEmployer_Get">Change<span class="govuk-visually-hidden"> name of organisation</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.EmployerDescription" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.EmployerWebsiteUrlSectionState">Organisation website (optional)</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @(Model.HasEmployerWebsiteUrl ? Model.EmployerWebsiteUrl : "None")
                </dd>
                <dd class="govuk-summary-list__actions">
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.EmployerWebsiteUrl" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row govuk-summary-list--no-border">
                <dt-review-section section-state="@Model.EmployerContactSectionState">Contact name (optional)</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @(Model.HasEmployerContactName ? Model.EmployerContactName : "None")
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.EmployerContactDetails_Get">Change<span class="govuk-visually-hidden"> contact details</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.EmployerContact" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row govuk-summary-list--no-border">
                <dt-review-section section-state="@Model.EmployerContactSectionState">Contact email (optional)</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @(Model.HasEmployerContactEmail ? Model.EmployerContactEmail : "None")
                </dd>
                <dd class="govuk-summary-list__actions">
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.EmployerContact" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.EmployerContactSectionState">Contact number (optional)</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @(Model.HasEmployerContactTelephone ? Model.EmployerContactTelephone : "None")
                </dd>
                <dd class="govuk-summary-list__actions">
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.EmployerContact" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            <div class="govuk-summary-list__row govuk-summary-list--no-border">
                @if (Model.ApplicationMethod == ApplicationMethod.ThroughExternalApplicationSite)
                {
                    <dt-review-section section-state="@Model.ApplicationUrlSectionState">Application website</dt-review-section>
                    <dd class="govuk-summary-list__value">
                        @Model.ApplicationUrl
                    </dd>
                }
                else
                {
                    <dt-review-section section-state="@Model.ApplicationInstructionsSectionState">Application website</dt-review-section>
                    <dd class="govuk-summary-list__value">
                        @Model.FindAnApprenticeshipUrl
                    </dd>
                }
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state float-right-desktop" asp-route="@RouteNames.ApplicationProcess_Get">Change<span class="govuk-visually-hidden"> application process</span></a>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.ApplicationMethod" tag-name="strong" model="@Model"/>
                    <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.ApplicationUrl" tag-name="strong" model="@Model"/>
                </dd>
            </div>
            @if (Model.HasApplicationInstructions)
            {
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Explain the application process (optional)
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @(Model.HasApplicationInstructions ? Model.ApplicationInstructions : "None")
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <review-field class="govuk-tag--orange" field-name="@FieldIdentifiers.ApplicationInstructions" tag-name="strong" model="@Model"/>
                    </dd>
                </div>
            }
            
        </dl>
        <h2 class="govuk-heading-m">Now submit your advert</h2>
        <p class="govuk-body">By submitting this advert you are confirming that, to the best of your knowledge, the details you are providing are correct.</p>
        <p class="govuk-body"><a asp-route="@RouteNames.VacancyAdvertPreview" class="govuk-link govuk-link--no-visited-state">Preview advert before submitting</a></p>
        <form asp-route="@RouteNames.Preview_Submit_Post" class="form-inline">
            <input type="submit" value="@Model.SubmitButtonText" class="govuk-button" esfa-automation="submit-button" />
        </form>
    </div>
</div>
