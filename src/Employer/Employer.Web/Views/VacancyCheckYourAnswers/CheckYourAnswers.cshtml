@using Esfa.Recruit.Employer.Web.ViewModels.VacancyPreview
@using Esfa.Recruit.Vacancies.Client.Domain.Entities
@model Esfa.Recruit.Employer.Web.ViewModels.VacancyPreview.VacancyPreviewViewModel

@{ ViewBag.GaData.Vpv = "/recruitment/employer/check-your-answers"; }

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">  
        <a asp-route="@RouteNames.EmployerTaskListGet" esfa-automation="link-back" class="govuk-back-link govuk-!-margin-top-0 govuk-!-margin-bottom-6">Back to task list</a>
        <h1 class="govuk-heading-xl">
            Check your answers before submitting your advert
        </h1>
        <h2 class="govuk-heading-m">Advert summary</h2>
        <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Advert title
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.Title
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Title_Get">Change<span class="govuk-visually-hidden"> advert title</span></a>
                </dd>
            </div>
            @if (Model.AccountLegalEntityCount > 1)
            {
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Name of organisation
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.EmployerName
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Employer_Get">Change<span class="govuk-visually-hidden"> name of organisation</span></a>
                    </dd>
                </div>
            }
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Training course
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.TrainingTitle
                    todo: could be
                    @Model.TrainingDescription
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Training_Get">Change<span class="govuk-visually-hidden"> training course</span></a>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Training provider
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.ProviderName
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.TrainingProvider_Select_Get">Change<span class="govuk-visually-hidden"> training provider</span></a>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Summary of the apprenticeship
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.ShortDescription
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.ShortDescription_Get">Change<span class="govuk-visually-hidden"> summary of the apprenticeship</span></a>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    About the apprenticeship
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.VacancyDescription
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.VacancyDescription_Index_Get">Change<span class="govuk-visually-hidden"> about the apprenticeship</span></a>
                </dd>
            </div>
        </dl>
        <h2 class="govuk-heading-m">Employment details</h2>
        <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Closing date
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.ClosingDate
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Dates_Get">Change<span class="govuk-visually-hidden"> closing date</span></a>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Possible start date
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.PossibleStartDate
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Dates_Get">Change<span class="govuk-visually-hidden"> possible start date</span></a>
                </dd>
            </div>
        </dl>
        <h2 class="govuk-heading-m">next section</h2>
        <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Advert title
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.Title
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Title_Get">Change<span class="govuk-visually-hidden"> advert title</span></a>
                </dd>
            </div>
        </dl>
        <!--end-->
        <ol class="das-task-list">
            <li>
                <ul class="das-task-list__items">
                    <li class="das-task-list__item">
                        @if (Model.TaskListSectionOneState != VacancyTaskListSectionState.Completed)
                        {
                            <span class="das-task-list__task-name">
                                Important dates
                            </span>    
                        }
                        else
                        {
                            <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Dates_Get">
                                Important dates
                            </a>
                        }
                    </li>
                    <li class="das-task-list__item">
                        @if (Model.ClosingDateSectionState == VacancyPreviewSectionState.Incomplete || Model.PossibleStartDateSectionState == VacancyPreviewSectionState.Incomplete)
                        {
                            <span class="das-task-list__task-name">
                                Duration and working hours
                            </span>    
                        }
                        else
                        {
                            <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Duration_Get">
                                Duration and working hours
                            </a>
                        }
                    </li>
                    <li class="das-task-list__item">
                        @if (Model.ExpectedDurationSectionState == VacancyPreviewSectionState.Incomplete)
                        {
                            <span class="das-task-list__task-name">
                                Pay rate
                            </span>    
                        }
                        else
                        {
                            <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Wage_Get">
                                Pay rate
                            </a>
                        }
                    </li>
                    
                    <li class="das-task-list__item">
                        @if (Model.WageTextSectionState == VacancyPreviewSectionState.Incomplete)
                        {
                            <span class="das-task-list__task-name">
                                Number of positions
                            </span>    
                        }
                        else
                        {
                            <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.NumberOfPositions_Get">
                                Number of positions
                            </a>
                        }
                    </li>
                    <li class="das-task-list__item">
                        @if (Model.NumberOfPositionsSectionState == VacancyPreviewSectionState.Incomplete)
                        {
                            <span class="das-task-list__task-name">
                                Location
                            </span>    
                        }
                        else
                        {
                            <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Location_Get">
                                Location
                            </a>
                        }
                    </li>
                </ul>
            </li>
            <li>
                <h2 class="das-task-list__section">
                    <span class="das-task-list__section-number">3. </span> 
                    <span class="das-task-list__section-heading">Skills and qualifications</span>
                    <span class="das-task-list__section-status">
                        @if(Model.TaskListSectionThreeState == VacancyTaskListSectionState.InProgress)
                        {
                            <strong class="govuk-tag govuk-tag--blue das-task-list__section-tag">In progress</strong>
                        }
                        else if (Model.TaskListSectionThreeState == VacancyTaskListSectionState.Completed)
                        {
                            <strong class="govuk-tag das-task-list__section-tag">Completed</strong>    
                        }
                        else
                        {
                            <strong class="govuk-tag govuk-tag--grey das-task-list__section-tag">Not started</strong>
                        }
                        
                    </span>
                </h2>
                <ul class="das-task-list__items">
                    <li class="das-task-list__item">
                        @if (Model.EmployerAddressSectionState == VacancyPreviewSectionState.Incomplete)
                        {
                            <span>
                                Skills
                            </span>
                        }
                        else
                        {
                            <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Skills_Get">
                                Skills
                            </a>
                        }
                    </li>
                    <li class="das-task-list__item">
                        @if (Model.SkillsSectionState == VacancyPreviewSectionState.Incomplete)
                        {
                            <span>
                                Qualifications
                            </span>
                        }
                        else
                        {
                            <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Qualifications_Get">
                                Qualifications
                            </a>
                        }
                    </li>
                    <li class="das-task-list__item">
                        @if (Model.QualificationsSectionState == VacancyPreviewSectionState.Incomplete)
                        {
                            <span>
                                Other things to consider
                            </span>
                        }
                        else
                        {
                            <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Considerations_Get">
                                Other things to consider
                            </a>
                        }
                    </li>
                </ul>
            </li>
            <li>
                <h2 class="das-task-list__section">
                    <span class="das-task-list__section-number">4. </span> 
                    <span class="das-task-list__section-heading">About the employer</span>
                    <span class="das-task-list__section-status">
                        @if(Model.TaskListSectionFourState == VacancyTaskListSectionState.InProgress)
                        {
                            <strong class="govuk-tag govuk-tag--blue das-task-list__section-tag">In progress</strong>
                        }
                        else if (Model.TaskListSectionFourState == VacancyTaskListSectionState.Completed)
                        {
                            <strong class="govuk-tag das-task-list__section-tag">Completed</strong>    
                        }
                        else
                        {
                            <strong class="govuk-tag govuk-tag--grey das-task-list__section-tag">Not started</strong>
                        }
                    </span>
                </h2>
                <ul class="das-task-list__items">
                    <li class="das-task-list__item">
                        @if (Model.TaskListSectionThreeState != VacancyTaskListSectionState.Completed)
                        {
                            <span>
                                 Name of employer on advert
                            </span>    
                        }
                        else
                        {
                            <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.EmployerName_Get">
                                 Name of employer on advert
                            </a>    
                        }
                    </li>
                    <li class="das-task-list__item">
                        @if (!Model.HasSelectedEmployerNameOption)
                        {
                            <span class="das-task-list__task-name">
                                 Employer information
                            </span>    
                        }
                        else
                        {
                            <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.AboutEmployer_Get">
                                 Employer information
                            </a>    
                        }
                    </li>
                    <li class="das-task-list__item">
                        @if (!Model.HasSelectedEmployerNameOption)
                        {
                            <span class="das-task-list__task-name">
                                 Contact details
                            </span>    
                        }
                        else
                        {
                            <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.EmployerContactDetails_Get">
                                 Contact details
                            </a>    
                        }
                    </li>
                    <li class="das-task-list__item">
                        @if (Model.HasSelectedEmployerNameOption && !Model.EmployerDescriptionRequiresEdit && Model.TaskListSectionThreeState == VacancyTaskListSectionState.Completed)
                        {
                            <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.ApplicationProcess_Get">
                                Website for application
                            </a>    
                               
                        }
                        else
                        {
                            <span class="das-task-list__task-name">
                                Website for application
                            </span> 
                        }
                    </li>
                </ul>
            </li>
            <li>
                <h2 class="das-task-list__section">
                    <span class="das-task-list__section-number">5. </span> 
                    <span class="das-task-list__section-heading">Check and submit your advert</span>
                    <span class="das-task-list__section-status">
                        @if(Model.TaskListSectionFourState == VacancyTaskListSectionState.Completed)
                        {
                            <strong class="govuk-tag govuk-tag--blue das-task-list__section-tag">In progress</strong>
                        }
                        else if (Model.Status == VacancyStatus.Submitted)
                        {
                            <strong class="govuk-tag das-task-list__section-tag">Completed</strong>    
                        }
                        else
                        {
                            <strong class="govuk-tag govuk-tag--grey das-task-list__section-tag">Not started</strong>
                        }
                    </span>
                </h2>
                <ul class="das-task-list__items">
                    <li class="das-task-list__item">
                        <span>
                            Check your answers and submit your advert
                        </span>
                    </li>
                </ul>
            </li>
        </ol>
    </div>
</div>
