@model Esfa.Recruit.Employer.Web.ViewModels.Submitted.VacancySubmittedConfirmationViewModel

<h1 class="heading-large">@Model.Title</h1>

<div class="grid-row">
    <div class="column-two-thirds">
        <div asp-show="@Model.IsNotResubmit" class="govuk-box-highlight">
            <h1 class="heading-xlarge">
                Vacancy submitted for approval
            </h1>
            <p asp-show="@Model.HasVacancyReference" class="font-large">
                The vacancy reference number is <br>
                <strong class="bold">VAC@(Model.VacancyReference)</strong>
            </p>
        </div>
        <div asp-show="@Model.IsResubmit" class="govuk-box-highlight">
            <h1 class="heading-xlarge">
                Vacancy resubmitted for approval
            </h1>
        </div>
        <h2 class="heading-medium">Next steps</h2>
        <p>Your vacancy will now be reviewed by an Education and Skills Funding Agency adviser.</p>
        <p>You’ll be notified within 24 hours, through your recruitment page, if you need to make any edits to your vacancy.</p>
        <p>We’ll also confirm on your recruitment page, when your vacancy is live.</p>
        <div class="form-group inline">
            <div class="form-group">
                <a asp-route="@RouteNames.Dashboard_Index_Get" class="button">Return to dashboard</a>
                <a asp-route="@RouteNames.CreateVacancyOptions_Get" class="button-link">Create another vacancy</a>
            </div>
        </div>
    </div>
</div>