@using Esfa.Recruit.Vacancies.Client.Application.Services
@model Esfa.Recruit.Employer.Web.ViewModels.EditVacancyDates.EditVacancyDatesViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <partial name="@PartialNames.ValidationSummary" model='new ValidationSummaryViewModel { ModelState = ViewData.ModelState, OrderedFieldNames = Model.OrderedFieldNames }' />
        <div class="grey-border govuk-!-margin-top-6">
            <form asp-route="@RouteNames.VacancyEditDates_Post" novalidate>
                <div esfa-validation-marker-for="ClosingDate" class="govuk-form-group">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-label govuk-!-font-weight-bold">Closing date for applications</legend>
                        <span esfa-validation-message-for="ClosingDate" class="govuk-error-message"></span>
                        <div class="form-date">
                            <div class="govuk-form-group govuk-form-group-day">
                                <label asp-for="ClosingDay" class="form-label">Day</label>
                                <input asp-for="ClosingDay" class="form-control" type="number" min="1" max="31">
                            </div>
                            <div class="govuk-form-group govuk-form-group-month">
                                <label asp-for="ClosingMonth" class="form-label">Month</label>
                                <input asp-for="ClosingMonth" class="form-control" type="number" min="1" max="12">
                            </div>
                            <div class="govuk-form-group govuk-form-group-year">
                                <label asp-for="ClosingYear" class="form-label">Year</label>
                                <input asp-for="ClosingYear" class="form-control" type="number" min="@Model.CurrentYear">
                            </div>
                        </div>
                    </fieldset>
                </div>

                <div class="govuk-form-group">
                    <details role="group">
                        <summary role="button" aria-controls="details-content-0" aria-expanded="true">
                            <span class="summary">Information about extending closing dates</span>
                        </summary>

                        <div class="panel panel-border-narrow" id="details-content-0" aria-hidden="false">
                            <p>Before you extend the closing date remember that:</p>
                            <ul class="list list-bullet">
                                <li>the apprenticeship training you chose may no longer be available</li>
                                <li>the fixed wage may no longer be valid, depending on National Minimum Wage changes</li>
                            </ul>
                            <p>To change the apprenticeship training or wage on the vacancy, you will need to create a new vacancy</p>
                        </div>
                    </details>
                </div>


                <div esfa-validation-marker-for="StartDate" class="govuk-form-group">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-label govuk-!-font-weight-bold">Possible start date</legend>
                        <span esfa-validation-message-for="StartDate" class="govuk-error-message"></span>
                        <div class="form-date">
                            <div class="govuk-form-group govuk-form-group-day">
                                <label asp-for="StartDay" class="form-label">Day</label>
                                <input asp-for="StartDay" class="form-control" type="number" min="1" max="31">
                            </div>
                            <div class="govuk-form-group govuk-form-group-month">
                                <label asp-for="StartMonth" class="form-label">Month</label>
                                <input asp-for="StartMonth" class="form-control" type="number" min="1" max="12">
                            </div>
                            <div class="govuk-form-group govuk-form-group-year">
                                <label asp-for="StartYear" class="form-label">Year</label>
                                <input asp-for="StartYear" class="form-control" type="number" min="@Model.CurrentYear">
                            </div>
                        </div>
                    </fieldset>
                </div>

                <div class="govuk-form-group">
                    <label class="govuk-label govuk-!-font-weight-bold" for="apprenticeship-type">Apprenticeship training</label>
                    <p>@Model.ProgammeName</p>
                </div>
                <button type="submit" class="govuk-button save-button">Preview changes</button>
                <a asp-route="@RouteNames.VacancyEdit_Get" class="govuk-link das-button-link">Cancel</a>
            </form>
        </div>
    </div>
</div>