@using Esfa.Recruit.Shared.Web.Mappers
@model Esfa.Recruit.Employer.Web.ViewModels.Part1.TrainingProvider.ConfirmTrainingProviderViewModel
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <h1 class="govuk-heading-xl">
            <span class="govuk-caption-l">@Model.Title</span>
            Save this training provider
        </h1>

        <div class="verification-summary">
            <h2 class="govuk-heading-m">
                @Model.ProviderName
                <span class="govuk-caption-m">
                    @Model.ProviderAddress
                    <br />UKPRN: @Model.Ukprn
                </span>
            </h2>
        </div>

        <form asp-route="@RouteNames.TrainingProvider_Confirm_Post" asp-route-wizard="@Model.PageInfo.IsWizard" novalidate>
            <input asp-for="Ukprn" type="hidden" />
            <div class="govuk-form-group">
                <input type="submit" value="Confirm training provider" esfa-automation="btn-continue" class="govuk-button" />
                <a asp-route="@RouteNames.TrainingProvider_Select_Get" asp-route-ukprn="@Model.Ukprn" asp-route-wizard="@Model.PageInfo.IsWizard" esfa-automation="link-change" class="govuk-link das-button-link">Change training provider</a>
                
                <a asp-show="@Model.PageInfo.IsWizard" asp-route="@RouteNames.Dashboard_Index_Get" class="govuk-link das-button-link" esfa-automation="cancel-link">Cancel</a>
                <a asp-show="@Model.PageInfo.IsNotWizard" asp-route="@RouteNames.Vacancy_Preview_Get" asp-fragment="@Anchors.TrainingProviderSection" class="govuk-link das-button-link" esfa-automation="cancel-link">Cancel</a>
            </div>
        </form>
    </div>
</div>