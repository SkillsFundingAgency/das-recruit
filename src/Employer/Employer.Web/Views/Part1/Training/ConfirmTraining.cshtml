@using Esfa.Recruit.Shared.Web.Mappers
@model Esfa.Recruit.Employer.Web.ViewModels.Part1.Training.ConfirmTrainingViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <a asp-route="@RouteNames.Training_Get" asp-route-programmeid="@Model.ProgrammeId" asp-route-wizard="@Model.PageInfo.IsWizard" class="govuk-back-link govuk-!-margin-top-0 govuk-!-margin-bottom-6">Back</a>
        <h1 class="govuk-heading-xl">Confirm apprenticeship training</h1>
        <div class="verification-summary">
            <h2 class="govuk-heading-m">
                @Model.TrainingTitle
                <span class="govuk-caption-m">
                    @Model.Level.ToDescription()
                    <br>
                    Typical duration: @Model.DurationMonths months
                    <br>
                    @Model.ProgrammeType
                    <br>
                </span>
            </h2>

            <div asp-show="@Model.ShowTrainingEffectiveToDate" class="govuk-warning-text">
                <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                <strong class="govuk-warning-text__text">
                    <span class="govuk-warning-text__assistive">Warning</span>
                    <span id="selected-training" class="govuk-!-font-weight-bold">
                        This apprenticeship training closes to new starters from
                        @Model.TrainingEffectiveToDate.
                    </span></strong>
            </div>

            <p class="govuk-body govuk-!-margin-bottom-0">
                <a asp-route="@RouteNames.Training_Get" asp-route-wizard="@Model.PageInfo.IsWizard" asp-route-programmeid="@Model.ProgrammeId" class="govuk-link">Change apprenticeship training</a>
            </p>
        </div>
        <form asp-route="@RouteNames.Training_Confirm_Post" asp-route-wizard="@Model.PageInfo.IsWizard" novalidate>
            <div class="govuk-form-group">
                <input asp-for="ProgrammeId" type="hidden" />
                <input type="submit" value="Confirm and Continue" esfa-automation="btn-continue" class="govuk-button" />
                <a asp-show="@Model.PageInfo.IsWizard" asp-route="@RouteNames.Dashboard_Index_Get" class="govuk-link das-button-link" esfa-automation="cancel-link">Cancel</a>
                <a asp-show="@Model.PageInfo.IsNotWizard" asp-route="@RouteNames.Vacancy_Preview_Get" asp-fragment="@Anchors.TrainingProviderSection" class="govuk-link das-button-link" esfa-automation="cancel-link">Cancel</a>
            </div>
        </form>
    </div>
</div>