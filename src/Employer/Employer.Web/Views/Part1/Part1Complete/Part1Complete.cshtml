@using Microsoft.Extensions.Options

@inject IOptions<ExternalLinksConfiguration> ExternalLinks
@{ 
    ViewBag.Vpv = "/recruitment/employer/page-part1-complete";
    ViewBag.Title = "Preview your advert";
    ViewBag.ZenDeskLabel = "recruit-preview-your-vacancy";
}
@section BackLink
{
    <a asp-route="@RouteNames.Wage_Get" esfa-automation="link-back" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Preview your advert</h1>
        <p class="govuk-body">
            Review the details that will appear in your advert. You can still make changes if you need to.
        </p>
        <p class="govuk-body">
            Once we've approved your advert, it will appear on ​the <a href="@ExternalLinks.Value.FindAnApprenticeshipUrl" class="govuk-link govuk-link--no-visited-state" target="_blank">Find an apprenticeship service (opens in a new tab or window)</a>.
        </p>
        <div class="govuk-button-group">
            <a asp-route="@RouteNames.Vacancy_Preview_Get" esfa-automation="link-continue" class="govuk-button" esfa-automation="continue-button">Preview advert</a>
        </div>
    </div>
</div>
