@model Esfa.Recruit.Employer.Web.ViewModels.Part1.ShortDescription.ShortDescriptionViewModel

<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-xlarge small-bottom-margin">Make your vacancy stand out in a search</h1>
        <p>
            Apprentice candidates will see your vacancy in a search along with vacancies from other employers. This is your
            opportunity to make your vacancy attract the best candidates
        </p>
        @Html.Partial(PartialNames.Part1Header)

        @Html.Partial("_ValidationSummary", new ValidationSummaryViewModel { ModelState = ViewData.ModelState, OrderedFieldNames = Model.OrderedFieldNames })
        
        @Html.Partial("_ReviewSummary", Model.Review)

        <div class="todo">
            <h3 asp-condition="@Model.PageInfo.IsWizard" class="heading-medium no-top-margin">Step 2 of 6</h3>
            <form asp-route="@RouteNames.ShortDescription_Post" asp-route-wizard="@Model.PageInfo.IsWizard" novalidate>
                <div esfa-validation-marker-for="ShortDescription" class="form-group">
                    <label asp-for="ShortDescription" class="form-label-bold">
                        Write a few sentences to describe your vacancy
                    </label>
                    <span esfa-validation-message-for="ShortDescription" class="error-message"></span>
                    <textarea asp-for="ShortDescription" class="form-control form-control-3-4 character-count" rows="5" data-val-length-max="350"></textarea>
                    <span class="sfa-form-control-after"></span>
                    <span class="maxchar-count">350</span>
                    <span class="maxchar-text"> characters remaining</span>
                </div>
                <button type="submit" class="button save-button">@Model.PageInfo.SubmitButtonText</button>

                <a asp-condition="@Model.PageInfo.IsWizard" asp-route="@RouteNames.Dashboard_Index_Get" class="button-link">Cancel</a>
                <a asp-condition="@Model.PageInfo.IsNotWizard" asp-route="@RouteNames.Vacancy_Preview_Get" asp-fragment="@PreviewAnchors.ShortDescriptionSection" class="button-link">Cancel</a>
            </form>
        </div>
    </div>
</div>