@model Esfa.Recruit.Employer.Web.ViewModels.ConfirmTrainingProviderViewModel
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-6">@Model.Title</h1>
        <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
        <div class="verification-summary">
            <h3 class="govuk-heading-s">@Model.ProviderName</h3>
            <h3 class="govuk-heading-s">@Model.ProviderAddress</h3>
            <h3 class="govuk-heading-s">UKPRN: @Model.Ukprn</h3>
        </div>
        <form asp-route="@RouteNames.TrainingProvider_Confirm_Post">
            <input asp-for="Ukprn" type="hidden" />
            <div class="govuk-form-group">
                <input type="submit" value="Confirm training provider" esfa-automation="btn-continue" class="govuk-button" />
                <a asp-route="@RouteNames.TrainingProvider_Select_Get" esfa-automation="link-change" class="govuk-link das-button-link">Change training provider</a>
                <a asp-route="@RouteNames.Vacancy_Preview_Get" esfa-automation="link-cancel" class="govuk-link das-button-link">Cancel</a>
            </div>
        </form>
    </div>
</div>