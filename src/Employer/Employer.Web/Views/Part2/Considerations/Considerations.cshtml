@model Esfa.Recruit.Employer.Web.ViewModels.ConsiderationsViewModel
@{ 
    ViewBag.Vpv = "/recruitment/employer/page-part2-considerations";
    ViewBag.Title = "What else would you like the applicant to consider? (optional)";
    ViewBag.ZenDeskLabel = "recruit-what-else-would-you-like-the-applicant-to-consider";
}

@section BackLink {
    <esfaFeatureEnabled name="@FeatureNames.EmployerTaskList">
        <a asp-show="@(!Model.IsTaskListCompleted)" asp-route="@RouteNames.Qualifications_Get" esfa-automation="link-back" class="govuk-back-link">Back</a>
        <a asp-show="@Model.IsTaskListCompleted" asp-route="@RouteNames.EmployerCheckYourAnswersGet" esfa-automation="link-back" class="govuk-back-link">Back</a>
    </esfaFeatureEnabled>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <partial name="@PartialNames.ValidationSummary" model='new ValidationSummaryViewModel { ModelState = ViewData.ModelState }'/>
        <partial name="@PartialNames.ReviewSummary" for="Review"/>

        <span class="govuk-caption-l">@Model.Title</span>
        <form asp-route="@RouteNames.Considerations_Post">
            <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="350">
                <div esfa-validation-marker-for="ThingsToConsider" class="govuk-form-group">
                    <h1 class="govuk-label-wrapper">
                        <label class="govuk-label govuk-label--xl" asp-for="ThingsToConsider">
                            What else would you like the applicant to consider? (optional)
                        </label>
                    </h1>
                    <div id="ThingsToConsider-hint" class="govuk-hint">
                        For example, if the vacancy will involve working outdoors or lifting heavy objects.
                    </div>
                    <span esfa-validation-message-for="ThingsToConsider" class="govuk-error-message"></span>
                    <textarea class="govuk-textarea govuk-js-character-count" asp-for="ThingsToConsider" rows="5" aria-describedby="ThingsToConsider-info ThingsToConsider-hint"></textarea>
                </div>
                <div id="ThingsToConsider-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
                    You can enter up to 4000 characters
                </div>
            </div>
            <div class="govuk-button-group">
                <input type="submit" value="Save and continue" esfa-automation="btn-continue" class="govuk-button save-button"/>
                <esfaFeatureEnabled name="@FeatureNames.EmployerTaskList">
                    <a asp-show="@(!Model.IsTaskListCompleted)" asp-route="@RouteNames.Dashboard_Get" class="govuk-link govuk-link--no-visited-state">Cancel</a>
                    <a asp-show="@Model.IsTaskListCompleted" asp-route="@RouteNames.EmployerCheckYourAnswersGet" esfa-automation="cancel" class="govuk-link govuk-link--no-visited-state">Cancel</a>
                </esfaFeatureEnabled>
                <esfaFeatureDisabled name="@FeatureNames.EmployerTaskList">
                    <a asp-route="@RouteNames.Vacancy_Preview_Get" esfa-automation="link-cancel" class="govuk-link govuk-link--no-visited-state">Cancel</a>
                </esfaFeatureDisabled>
            </div>
        </form>
    </div>
</div>