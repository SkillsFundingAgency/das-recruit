@model Esfa.Recruit.Employer.Web.ViewModels.Part2.ShortDescription.ShortDescriptionViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="@PartialNames.ValidationSummary" model='new ValidationSummaryViewModel { ModelState = ViewData.ModelState, OrderedFieldNames = Model.OrderedFieldNames }' />
        <partial name="@PartialNames.ReviewSummary" for="Review" />
        <span class="govuk-caption-xl">@Model.Title</span>
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-6">Short description of the vacancy</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-route="@RouteNames.ShortDescription_Post">
             <div class="govuk-character-count"> 
                <div esfa-validation-marker-for="ShortDescription" class="govuk-form-group">
                    <label asp-for="ShortDescription" class="govuk-label govuk-!-font-weight-bold">
                        <p class="govuk-body">Write a few sentences about the vacancy to attract applicants. This is an important part of what applicants will see when looking through a list of vacancies, so make it stand out.</p>
                        <p class="govuk-body">
                            This could be:
                            <ul class="govuk-list govuk-list--bullet">
                                <li>what you are offering</li>
                                <li>why the applicant should apply</li>
                            </ul>
                        </p>
                    </label>
                    <span esfa-validation-message-for="ShortDescription" class="govuk-error-message"></span>
                    <textarea asp-for="ShortDescription" class="govuk-textarea character-count" rows="5" data-val-length-max="350" esfa-automation="short-description"></textarea>
                    <div>
                        <div class="govuk-body float-left">Minimum 50 characters</div>
                        <div class="govuk-body float-right">
                            <span class="maxchar-count">350</span>
                            <span class="maxchar-text"> characters remaining</span>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div> 
             <button type="submit" esfa-automation="btn-continue" class="govuk-button save-button">Save and preview</button>
            <a asp-route="@RouteNames.Vacancy_Preview_Get" esfa-automation="link-cancel" class="govuk-link das-button-link">Cancel</a>
        </form>
    </div>
</div>