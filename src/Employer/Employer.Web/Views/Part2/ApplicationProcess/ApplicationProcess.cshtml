@using Esfa.Recruit.Shared.Web.Mappers
@using Esfa.Recruit.Vacancies.Client.Domain.Entities
@model Esfa.Recruit.Employer.Web.ViewModels.ApplicationProcessViewModel
<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge small-bottom-margin">@Model.Title</h1>
        <hr>
        <partial name="@PartialNames.ValidationSummary" model='new ValidationSummaryViewModel { ModelState = ViewData.ModelState, OrderedFieldNames = Model.OrderedFieldNames }' />
        
        <partial name="@PartialNames.ReviewSummary" for="Review" />

        <form asp-route="@RouteNames.ApplicationProcess_Post" novalidate>
            
            <div esfa-validation-marker-for="ApplicationMethod" class="form-group">
                <fieldset>
                    <label class="form-label-bold sfa-small-bottom-margin" id="@Anchors.ApplicationMethodHeading">
                        How will candidates apply for this vacancy?
                        <span class="form-hint">All vacancies will be published on Find an apprenticeship</span>
                    </label>
                    <span esfa-validation-message-for="ApplicationMethod" class="error-message"></span>
                    <br />
                    <div class="multiple-choice">
                        <input asp-for="ApplicationMethod" value="@ApplicationMethod.ThroughFindAnApprenticeship" id="application-method-faa" type="radio">
                        <label for="application-method-faa" class="block-label selection-button-radio">
                            Through the <a href="@Model.FindAnApprenticeshipUrl" rel="noopener" target="_blank">Find an apprenticeship service</a>
                        </label>
                    </div>
                    <div class="multiple-choice" data-target="application-method-external-panel">
                        <input asp-for="ApplicationMethod" value="@ApplicationMethod.ThroughExternalApplicationSite" id="application-method-external" type="radio">
                        <label for="application-method-external" class="block-label selection-button-radio">
                            Through an external website
                        </label>
                    </div>
                </fieldset>
            </div>
            
            <div id="application-method-external-panel" class="panel panel-border-narrow js-hidden">
                <div esfa-validation-marker-for="ApplicationUrl" class="form-group">
                    <label asp-for="ApplicationUrl" class="form-label-bold">Enter the web address candidates should use to apply for this vacancy</label>
                    <span esfa-validation-message-for="ApplicationUrl" class="error-message"></span>
                    <input asp-for="ApplicationUrl" class="form-control" maxlength="200" />
                </div>
                <div esfa-validation-marker-for="ApplicationInstructions" class="form-group">
                    <label asp-for="ApplicationInstructions" class="form-label-bold">Explain the application process (optional)</label>
                    <span esfa-validation-message-for="ApplicationInstructions" class="error-message"></span>
                    <textarea asp-for="ApplicationInstructions" class="form-control form-control-3-4 character-count" rows="5" data-val-length-max="500"></textarea>
                    <span class="maxchar-count">500</span>
                    <span class="maxchar-text"> characters remaining</span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save and continue" esfa-automation="btn-continue" class="button save-button" />
                <a asp-route="@RouteNames.Vacancy_Preview_Get" esfa-automation="link-cancel" class="button-link">Cancel</a>
            </div>
        </form>
    </div>
</div>
@section footerJS
{
    <script nws-csp-add-nonce="true">
        $(function () {
            var showHideContent = new GOVUK.ShowHideContent();
            showHideContent.init();
        });
    </script>
}