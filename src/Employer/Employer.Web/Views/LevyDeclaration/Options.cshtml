@model Esfa.Recruit.Employer.Web.ViewModels.LevyDeclaration.LevyDeclarationModel
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l govuk-!-margin-bottom-6">You must pay the apprenticeship levy to post vacancies on Recruitment</h1>
        <partial name="@PartialNames.ValidationSummary" model='new ValidationSummaryViewModel { ModelState = ViewData.ModelState }' />
        <form asp-route="@RouteNames.LevyDeclaration_Post">
            <div esfa-validation-marker-for="ConfirmAsLevyPayer" class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <span esfa-validation-message-for="ConfirmAsLevyPayer" class="govuk-error-message"></span>
                    <div class="multiple-choice">
                        <input asp-for="@Model.ConfirmAsLevyPayer" type="radio" value="true" class="govuk-radios__input" id="confirm-yes" />
                        <label class="block-label selection-button-radio" for="confirm-yes">Yes - I pay the apprenticeship levy</label>
                    </div>
                    <div class="multiple-choice">
                        <input asp-for="@Model.ConfirmAsLevyPayer" type="radio" value="false" class="govuk-radios__input" id="confirm-no" />
                        <label class="block-label selection-button-radio" for="confirm-no">No - I do not pay the apprenticeship levy</label>
                    </div>
                </fieldset>
            </div>
            <div class="govuk-form-group">
                <input type="submit" value="Continue" class="govuk-button" />
            </div>
        </form>
    </div>
</div> 