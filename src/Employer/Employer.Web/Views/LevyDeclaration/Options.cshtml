@model Esfa.Recruit.Employer.Web.ViewModels.LevyDeclaration.LevyDeclarationModel
<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-large small-bottom-margin">You must pay the apprenticeship levy to post vacancies on Recruitment</h1>
        <partial name="@PartialNames.ValidationSummary" model='new ValidationSummaryViewModel { ModelState = ViewData.ModelState }' />
        <form asp-route="@RouteNames.LevyDeclaration_Post">
            <div esfa-validation-marker-for="ConfirmAsLevyPayer" class="form-group">
                <fieldset>
                    <span esfa-validation-message-for="ConfirmAsLevyPayer" class="error-message"></span>
                    <div class="multiple-choice">
                        <input asp-for="@Model.ConfirmAsLevyPayer" type="radio" value="true" id="confirm-yes" />
                        <label class="block-label selection-button-radio" for="confirm-yes">Yes - I pay the apprenticeship levy</label>
                    </div>
                    <div class="multiple-choice">
                        <input asp-for="@Model.ConfirmAsLevyPayer" type="radio" value="false" id="confirm-no" />
                        <label class="block-label selection-button-radio" for="confirm-no">No - I do not pay the apprenticeship levy</label>
                    </div>
                </fieldset>
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" class="button" />
            </div>
        </form>
    </div>
</div> 