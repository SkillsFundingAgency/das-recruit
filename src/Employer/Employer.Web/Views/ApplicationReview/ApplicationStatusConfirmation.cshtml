@using Esfa.Recruit.Vacancies.Client.Domain.Entities
@model Esfa.Recruit.Shared.Web.ViewModels.ApplicationReview.ApplicationStatusConfirmationViewModel
<div class="govuk-grid-row">
    
    <div class="govuk-grid-column-two-thirds">
        @*@Html.HiddenFor("Outcome",model => model.Outcome)*@
        @if (Model.Outcome.Value == ApplicationReviewStatus.Successful)
        {
            <h1 class="govuk-heading-xl govuk-!-margin-bottom-6">
                Are you sure you want to tell this applicant that they have been accepted?
            </h1>
            <p>
                This will notify @Model.Name to say that they have been accepted for this apprenticeship.
            </p>
        }
        else
        {
            <h1 class="govuk-heading-xl govuk-!-margin-bottom-6">
                Are you sure you want to tell this applicant that they have not been accepted?
            </h1>
            <p>
                This will notify @Model.Name to say that they have not been accepted for this apprenticeship.
            </p>
        }
        @if (Model.Outcome.Value == ApplicationReviewStatus.Unsuccessful)
        {
            <details class="govuk-details">
                <summary class="govuk-details__summary">
                    <span class="govuk-details__summary-text">
                        View your message to the applicant
                    </span>
                </summary>
                <div class="govuk-details__text">
                    <p class="govuk-body">@Model.CandidateFeedback</p>
                    @*@Html.HiddenFor("CandidateFeedback",model => model.CandidateFeedback)*@
                </div>
            </details>
        }
        <div class="govuk-inset-text">
            <p><span class="">This action cannot be undone</span>.</p>
        </div>

        <form asp-route="@RouteNames.ApplicationStatusConfirmation_Post">
            @Html.HiddenFor(model => model.Outcome)
            @Html.HiddenFor(model => model.CandidateFeedback)
            <div esfa-validation-marker-for="NotifyApplicant" class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <span esfa-validation-message-for="NotifyApplicant" class="govuk-error-message"></span>
                    <div class="govuk-radios">
                        <div class="govuk-radios__item">
                            <input asp-for="NotifyApplicant" class="govuk-radios__input" id="notify-applicant-yes" type="radio" value="true">
                            <label for="notify-applicant-yes" class="govuk-label govuk-radios__label">Yes, notify the applicant</label>
                        </div>
                        <div class="govuk-radios__item">
                            <input asp-for="NotifyApplicant" class="govuk-radios__input" id="notify-applicant-no" type="radio" value="false">
                            <label for="notify-applicant-no" class="govuk-label govuk-radios__label">No</label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="govuk-form-group">
                <input type="submit" value="Continue" class="govuk-button" />
            </div>
        </form>
    </div>
</div>