@model ReviewHistoriesViewModel

<div asp-show="@Model.HasHistories" class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <a href="#history" id="history_link">Show reviewers history</a>
        <div id="history">
            <h2 class="govuk-heading-m govuk-!-margin-top-6">Reviewers history</h2>
            <table>
                <thead>
                    <tr>
                        <th class="bold">Name</th>
                        <th class="bold">Action</th>
                        <th class="bold">Date / time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var history in Model.Items)
                    {
                        <tr>
                            <td>@history.ReviewerName</td>
                            <td>
                                <a asp-route="@RouteNames.Vacancy_Readonly_Review_Get" asp-route-reviewId="@history.ReviewId" target="_blank">@history.Outcome vacancy</a>
                            </td>
                            <td>
                                @history.ReviewDateDay
                                <br>
                                @history.ReviewDateTime
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>