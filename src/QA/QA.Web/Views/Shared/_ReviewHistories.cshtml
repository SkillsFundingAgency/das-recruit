@model ReviewHistoriesViewModel

<div asp-show="@Model.HasHistories" class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <a href="#history" id="history_link" class="govuk-link">Show reviewers history</a>
        <div id="history">
            <h2 class="govuk-heading-m govuk-!-margin-top-6">Reviewers history</h2>
            <table class="govuk-table">
                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th class="govuk-table__header">Name</th>
                        <th class="govuk-table__header">Action</th>
                        <th class="govuk-table__header">Date / time</th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">
                    @foreach (var history in Model.Items)
                    {
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">@history.ReviewerName</td>
                            <td class="govuk-table__cell">
                                <a asp-route="@RouteNames.Vacancy_Readonly_Review_Get" asp-route-reviewId="@history.ReviewId" class="govuk-link" target="_blank">@history.Outcome vacancy</a>
                            </td>
                            <td class="govuk-table__cell">
                                @history.ReviewDateDay
                                <br>
                                @history.ReviewDateTime
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>