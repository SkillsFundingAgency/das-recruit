@model Esfa.Recruit.Qa.Web.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="grid-row">
    <div class="column-two-thirds">

        @if (@Model.StatusCode == 404)
        {
            <header class="page-header group">
                <h1 class="heading-xlarge small-bottom-margin">Page not found</h1>
            </header>

            <div class="article-container">
                <article role="article" class="group">
                    <div class="inner">
                        <p>If you entered a web address please check it was correct.</p>
                    </div>
                </article>
            </div>

        } else {
            <header class="page-header group">
                <h1 class="heading-xlarge small-bottom-margin">@Model.StatusCode Error.</h1>
            </header>

            <div class="article-container">
                <article role="article" class="group">
                    <div class="inner">
                        <p>An error occurred while processing your request.</p>
                    </div>
                </article>
            </div>
        }

        @if (Model.ShowRequestId)
        {
            <p>The request ID that caused this error is</p>
            <p>@Model.RequestId</p>
        }

    </div>
</div>