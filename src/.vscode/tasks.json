{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-web",
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Employer/Employer.sln",
                "/p:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-jobs",
            "group": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Jobs/Jobs.sln",
                "/p:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-client",
            "group": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Shared/VacanciesClient.sln",
                "/p:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "web-unit-tests",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/Employer/UnitTests/UnitTests.csproj",
                "/p:GenerateFullPaths=true"
            ]
        },
        {
            "label": "web-integration-tests",
            "group": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/Employer/IntegrationTests/IntegrationTests.csproj",
                "/p:GenerateFullPaths=true"
            ]
        }
    ]
}