@model Esfa.Recruit.Provider.Web.ViewModels.VacancyManage.EditVacancyViewModel

@{
    ViewBag.GaData.Vpv = "/recruitment/provider/page-edit-vacancy";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="info-summary govuk-!-margin-top-6" role="alert" tabindex="-1">
            <h3 class="govuk-heading-m govuk-!-margin-top-0">You can edit the following information:</h3>
            <ul class="govuk-list">
                <li><a href="#closingDateSection" class="govuk-link">Closing date</a></li>
                <li><a href="#possibleStartDateSection" class="govuk-link">Possible start date</a></li>
            </ul>
        </div>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl" id="vacancy-header">
            @Model.Title
            <span class="govuk-caption-xl">@Model.EmployerName</span>
        </h1>
    </div>
</div>
<partial name="@PartialNames.EditVacancyPartial" model="Model" />

<div class="govuk-form-group">
    <div class="govuk-form-group govuk-!-margin-top-6">
        <form asp-show="@Model.HasChanges" asp-route="@RouteNames.SubmitVacancyChanges_Post" novalidate>
            <input type="hidden" name="ProposedClosingDate" value="@Model.ProposedClosingDateFormValue" />
            <input type="hidden" name="ProposedStartDate" value="@Model.ProposedStartDateFormValue" />
            <button type="submit" class="govuk-button save-button">Publish</button>
        </form>
        <a asp-show="@Model.HasChanges" asp-route="@RouteNames.CancelVacancyChanges_Get" class="govuk-link das-button-link">Cancel</a>
        <a asp-show="@Model.IsUnchanged" asp-route="@RouteNames.VacancyManage_Get" class="govuk-button">Return to manage vacancy</a>
    </div>
</div>    