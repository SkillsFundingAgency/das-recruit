@using Microsoft.Extensions.Options
@model Esfa.Recruit.Provider.Web.RouteModel.VacancyRouteModel
@inject IOptions<ExternalLinksConfiguration> ExternalLinks

@{
    ViewBag.GaData.Vpv = "/recruitment/provider/page-create-vacancy-preview";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <a asp-route="@RouteNames.Wage_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-back" class="govuk-back-link govuk-!-margin-top-0 govuk-!-margin-bottom-6">Back</a>
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-6">Preview your vacancy</h1>
        <p class="govuk-body">
            Review the details that will appear in your vacancy. Once this is approved it will appear on
            <a href="@ExternalLinks.Value.FindAnApprenticeshipUrl" class="govuk-link" target="_blank">find an apprentice service (opens in new tab).</a>
        </p>
        <p class="govuk-body">
            You can change any of the details.
        </p>
        <div class="govuk-form-group govuk-!-margin-top-6">
            <a asp-route="@RouteNames.Vacancy_Preview_Get"  asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-continue" class="govuk-button" esfa-automation="continue-button">Preview vacancy</a>
        </div>
    </div>
</div>