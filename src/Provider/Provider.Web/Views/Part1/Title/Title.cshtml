@using Esfa.Recruit.Shared.Web.Mappers
@model Esfa.Recruit.Provider.Web.ViewModels.Part1.Title.TitleViewModel

@{
    ViewBag.GaData.Vpv = "/recruitment/provider/page-create-vacancy";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <esfaFeatureEnabled name="@FeatureNames.ProviderTaskList">
            <a asp-route="@RouteNames.ProviderTaskListGet" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-back" class="govuk-back-link govuk-!-margin-top-0 govuk-!-margin-bottom-6">Back</a>
        </esfaFeatureEnabled>
        <esfaFeatureDisabled name="@FeatureNames.ProviderTaskList">
            <a asp-show="@Model.PageInfo.IsWizard" asp-all-route-data="@Model.RouteDictionary" asp-route="@Model.BackLink" asp-route-wizard="@Model.PageInfo.IsWizard" esfa-automation="link-back" class="govuk-back-link govuk-!-margin-top-0 govuk-!-margin-bottom-6">Back</a>
        </esfaFeatureDisabled>
        
        <partial name="@PartialNames.ValidationSummary" model='new ValidationSummaryViewModel { ModelState = ViewData.ModelState, OrderedFieldNames = Model.OrderedFieldNames}'/>
        <partial name="@PartialNames.ReviewSummary" for="Review"/>
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-6">What do you want to call this vacancy?</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-route="@Model.FormPostRouteName" asp-route-vacancyId="@Model.VacancyId" asp-route-ukprn="@Model.Ukprn"  asp-route-wizard="@Model.PageInfo.IsWizard" novalidate>
            <input type="hidden" name="EmployerAccountId" value="@Model.EmployerAccountId" />
            <div esfa-validation-marker-for="Title" class="govuk-form-group">
                <p class="govuk-body">Use a title that relates to the apprenticeship training for this vacancy, this will help it get found in the Find an apprenticeship search.</p>
                <span class="govuk-hint">Must include the word 'apprentice' or 'apprenticeship' </span>
                <span esfa-validation-message-for="Title" class="govuk-error-message"></span>
                <input asp-for="Title" class="govuk-input character-count" type="text" data-val-length-max="100" />
                <div>
                    <span class="govuk-body maxchar-count">100</span>
                    <span class="govuk-body maxchar-text"> characters remaining</span>
                </div>
            </div>
            <button type="submit" class="govuk-button save-button">@Model.PageInfo.SubmitButtonText</button>
            <esfaFeatureEnabled name="@FeatureNames.ProviderTaskList">
                <a asp-route="@RouteNames.Dashboard_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-cancel" class="govuk-link das-button-link">Cancel</a>
            </esfaFeatureEnabled>
            <esfaFeatureDisabled name="@FeatureNames.ProviderTaskList">
                <a asp-show="@Model.PageInfo.IsWizard" asp-route="@RouteNames.Vacancies_Get" asp-all-route-data="@Model.RouteDictionary" class="govuk-link das-button-link">Cancel</a>
                <a asp-show="@Model.PageInfo.IsNotWizard" asp-route="@RouteNames.Vacancy_Preview_Get" asp-all-route-data="@Model.RouteDictionary" asp-fragment="@Anchors.TitleSection" class="govuk-link das-button-link">Cancel</a>
            </esfaFeatureDisabled>
            
        </form>
    </div>
</div>