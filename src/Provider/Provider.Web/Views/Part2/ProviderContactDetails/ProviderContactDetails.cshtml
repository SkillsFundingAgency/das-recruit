@model Esfa.Recruit.Provider.Web.ViewModels.Part2.ProviderContactDetails.ProviderContactDetailsViewModel

@{
    ViewBag.GaData.Vpv = "/recruitment/provider/page-vacancy-provider-contact";
    ViewBag.Title = "Add contact information";
}

@section BackLink {
    <esfaFeatureEnabled name="@FeatureNames.ProviderTaskList">
        <a asp-route="@RouteNames.AboutEmployer_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-back" class="govuk-back-link">Back</a>
    </esfaFeatureEnabled>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
     
        <partial name="@PartialNames.ValidationSummary" model='new ValidationSummaryViewModel { ModelState = ViewData.ModelState, OrderedFieldNames = Model.OrderedFieldNames }' />

        <partial name="@PartialNames.ReviewSummary" for="Review" />

        <h1 class="govuk-heading-xl">
            <span class="govuk-caption-xl">@Model.Title</span>
            Do you want to add your contact details?
        </h1>
        <p>This should be someone an applicant can contact to ask questions about the apprenticeship position.</p>
         <form asp-route="@RouteNames.ProviderContactDetails_Post"  asp-all-route-data="@Model.RouteDictionary" novalidate>
             <div esfa-validation-marker-for="AddContactDetails" class="govuk-form-group">
                <div class="govuk-radios govuk-radios--conditional govuk-form-group" data-module="radios">
                 
           
                     <span esfa-validation-message-for="AddContactDetails" class="govuk-error-message"></span>                
                     <div class="govuk-radios__item">
                         <input asp-for="AddContactDetails" value="true" class="govuk-radios__input" id="application-method-faa" type="radio" data-aria-controls="application-method-external-panel">

                         <label for="application-method-faa" class="govuk-label govuk-radios__label">
                             Yes
                         </label>
                     </div>
                     <div id="application-method-external-panel" class="govuk-radios__conditional govuk-radios__conditional--hidden">
                                  
                         <div esfa-validation-marker-for="ProviderContactName" class="govuk-form-group">
                             <label asp-for="ProviderContactName" class="govuk-label govuk-!-font-weight-bold">Contact name (optional)</label>
                             <span esfa-validation-message-for="ProviderContactName" class="govuk-error-message"></span>
                             <input asp-for="ProviderContactName" class="govuk-input govuk-!-width-one-half" maxlength="100"/>
                         </div>
                         <div esfa-validation-marker-for="ProviderContactEmail" class="govuk-form-group">
                             <label asp-for="ProviderContactEmail" class="govuk-label govuk-!-font-weight-bold">Contact email (optional)</label>
                             <span esfa-validation-message-for="ProviderContactEmail" class="govuk-error-message"></span>
                             <input asp-for="ProviderContactEmail" class="govuk-input govuk-!-width-one-half" maxlength="100"/>
                         </div>
                         <div esfa-validation-marker-for="ProviderContactPhone" class="govuk-form-group">
                             <label asp-for="ProviderContactPhone" class="govuk-label govuk-!-font-weight-bold">Contact number (optional)</label>
                             <span esfa-validation-message-for="ProviderContactPhone" class="govuk-error-message"></span>
                             <input asp-for="ProviderContactPhone" class="govuk-input govuk-!-width-one-half" type="tel" maxlength="16"/>
                         </div>
                     </div>
                     <div class="govuk-radios__item" data-target="application-method-external-panel">
                         <input asp-for="AddContactDetails" value="false" class="govuk-radios__input" id="application-method-external" type="radio" >
                         <label for="application-method-external" class="govuk-label govuk-radios__label">
                             No
                         </label>
                     </div>
                 </div>
             </div>
             <div class="govuk-button-group">
                  <input type="submit" value="Save and continue" esfa-automation="btn-continue" class="govuk-button save-button"/>
                  <esfaFeatureEnabled name="@FeatureNames.ProviderTaskList">
                      <a asp-route="@RouteNames.Dashboard_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-cancel" class="govuk-link govuk-link--no-visited-state">Cancel</a>
                  </esfaFeatureEnabled>
                  <esfaFeatureDisabled name="@FeatureNames.ProviderTaskList">
                      <a asp-route="@RouteNames.Vacancy_Preview_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-cancel" class="govuk-link govuk-link--no-visited-state">Cancel</a>
                  </esfaFeatureDisabled>

              </div>
         </form>
    </div>
</div>