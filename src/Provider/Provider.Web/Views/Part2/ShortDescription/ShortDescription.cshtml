@model Esfa.Recruit.Provider.Web.ViewModels.Part2.ShortDescription.ShortDescriptionViewModel

@{
    ViewBag.GaData.Vpv = "/recruitment/provider/page-vacancy-short-description";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <esfaFeatureEnabled name="@FeatureNames.ProviderTaskList">
            <a asp-route="@RouteNames.Training_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-back" class="govuk-back-link govuk-!-margin-top-0 govuk-!-margin-bottom-6">Back</a>
        </esfaFeatureEnabled>
        <partial name="@PartialNames.ValidationSummary" model='new ValidationSummaryViewModel { ModelState = ViewData.ModelState, OrderedFieldNames = Model.OrderedFieldNames }'/>
        <partial name="@PartialNames.ReviewSummary" for="Review"/>
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-6">
            <span class="govuk-caption-xl">@Model.Title</span>
            Summary of the apprenticeship
        </h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <form asp-route="@RouteNames.ShortDescription_Post" asp-all-route-data="@Model.RouteDictionary">
            <div class="govuk-character-count">
                <div esfa-validation-marker-for="ShortDescription" class="govuk-form-group">
                    <label asp-for="ShortDescription" class="govuk-label govuk-!-font-weight-bold">
                        <p class="govuk-body">Write a few sentences about the apprenticeship to attract applicants. This information will appear under your vacancy title when applicants look through a list of vacancies, so make it stand out.</p>
                        <p class="govuk-body">
                            This could be:
                            <ul class="govuk-list govuk-list--bullet">
                                <li>what you are offering</li>
                                <li>why the applicant should apply</li>
                            </ul>
                        </p>

                    </label>
                    <span esfa-validation-message-for="ShortDescription" class="govuk-error-message"></span>
                    <textarea asp-for="ShortDescription" class="govuk-textarea character-count" rows="5" data-val-length-max="350" esfa-automation="short-description"></textarea>
                    <div>
                        <div class="govuk-body">
                            <span class="text"> You have</span>
                            <span class="maxchar-count">350</span>
                            <span class="maxchar-text"> characters remaining</span>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
            <esfaFeatureEnabled name="@FeatureNames.ProviderTaskList">
                <button type="submit" esfa-automation="btn-continue" class="govuk-button save-button">Save and continue</button>
                <a asp-route="@RouteNames.Dashboard_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-cancel" class="govuk-link das-button-link">Cancel</a>
            </esfaFeatureEnabled>
            <esfaFeatureDisabled name="@FeatureNames.ProviderTaskList">
                <button type="submit" esfa-automation="btn-continue" class="govuk-button save-button">Save and preview</button>
                <a asp-route="@RouteNames.Vacancy_Preview_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-cancel" class="govuk-link das-button-link">Cancel</a>
            </esfaFeatureDisabled>


        </form>
    </div>
</div>