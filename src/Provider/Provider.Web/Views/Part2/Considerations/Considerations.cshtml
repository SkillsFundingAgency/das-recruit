@model Esfa.Recruit.Provider.Web.ViewModels.Part2.Considerations.ConsiderationsViewModel

@{
    ViewBag.GaData.Vpv = "/recruitment/provider/page-vacancy-considerations";
    ViewBag.Title = "Other requirements";
}

@section BackLink {
    <a asp-route="@Model.PageBackLink" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-back" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <partial name="@PartialNames.ValidationSummary" model='new ValidationSummaryViewModel { ModelState = ViewData.ModelState }' />

        <partial name="@PartialNames.ReviewSummary" for="Review" />

        <h1 class="govuk-heading-xl">
            <span class="govuk-caption-l">@Model.Title</span>
            Other requirements
        </h1>

        <p class="govuk-body">Tell applicants about requirements that are not skills or qualifications.</p>
        <p class="govuk-body">For example:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>passing a Disclosure and Barring Service (DBS) check</li>
            <li>being comfortable with working at height</li>
        </ul>

        <form asp-route="@RouteNames.Considerations_Post" asp-all-route-data="@Model.RouteDictionary">

            <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="4000">
                <div esfa-validation-marker-for="OtherRequirements" class="govuk-form-group">
                    <h2 class="govuk-label-wrapper">
                        <label class="govuk-label govuk-label--m" asp-for="OtherRequirements" >
                            What other requirements are there for this apprenticeship? (optional)
                        </label>
                    </h2>
                    <span esfa-validation-message-for="OtherRequirements" class="govuk-error-message"></span>
                    <textarea class="govuk-textarea" asp-for="OtherRequirements" rows="5" aria-describedby="OtherRequirements-info OtherRequirements-hint"></textarea>
                </div>
            </div>

            <div class="govuk-button-group">
                <input type="submit" value="Save and continue" esfa-automation="btn-continue" class="govuk-button save-button" />
                <a asp-route="@RouteNames.Dashboard_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-cancel" class="govuk-link govuk-link--no-visited-state">Cancel</a>
            </div>
        </form>
    </div>
</div>