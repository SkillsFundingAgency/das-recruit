                    @Model.TrainingTitle
                    <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.Training" tag-name="strong" model="@Model"/>
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Training_Get" asp-all-route-data="@Model.RouteDictionary">Change<span class="govuk-visually-hidden"> training course</span></a>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.ShortDescriptionSectionState">Summary of the apprenticeship</dt-review-section>
