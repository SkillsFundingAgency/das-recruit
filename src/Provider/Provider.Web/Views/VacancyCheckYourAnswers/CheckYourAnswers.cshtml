@using Esfa.Recruit.Shared.Web.Mappers
@using Esfa.Recruit.Shared.Web.TagHelpers
@using Esfa.Recruit.Vacancies.Client.Infrastructure.Configuration
@using Microsoft.AspNetCore.Mvc.ModelBinding
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Esfa.Recruit.Provider.Web.TagHelpers
@model Esfa.Recruit.Provider.Web.ViewModels.VacancyPreview.VacancyPreviewViewModel

@{
    ViewBag.GaData.Vpv = "/recruitment/provider/check-your-answers";
    ViewBag.Title = "Check your answers before submitting your vacancy";
}

@section BackLink {
    @if (Model.Status == VacancyStatus.Rejected || Model.Status == VacancyStatus.Referred)
    {
        <a asp-route="@RouteNames.Dashboard_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-back" class="govuk-back-link">Return to dashboard</a>        
    }
    else
    {
        <a asp-route="@RouteNames.ProviderTaskListGet" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-back" class="govuk-back-link">Back to task list</a>    
    }
    
}


@if (!Model.CanHideValidationSummary)
{
    <div class="govuk-error-summary review-summary govuk-!-margin-top-0" role="alert" tabindex="-1">
        <h2 class="govuk-error-summary__title">
            There is a problem
        </h2>
        <div class="govuk-error-summary__body">    
            <ul class="govuk-list govuk-error-summary__list">
                @foreach (var stateItem in Model.ValidationErrors.ModelState.Where(msi => msi.Value.ValidationState == ModelValidationState.Invalid)
                    .OrderBy(x => Model.OrderedFieldNames.IndexOf(x.Key)))
                {
                    <li>
                        @if (!string.IsNullOrEmpty(stateItem.Value.Errors.FirstOrDefault()?.ErrorMessage))
                        {
                            <a asp-fragment="@stateItem.Key" class="govuk-link">@stateItem.Value.Errors.FirstOrDefault()?.ErrorMessage</a>
                        }
                        else
                        {
                            <span>@stateItem.Value.Errors.FirstOrDefault()?.ErrorMessage</span>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
}

<div asp-show="Model.CanShowVacancyClonedStatusHeader" class="govuk-notification-banner govuk-notification-banner--success" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
  <div class="govuk-notification-banner__header">
    <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
      Success
    </h2>
  </div>
  <div class="govuk-notification-banner__content">
      <h3 class="govuk-notification-banner__heading">
          @Model.VacancyClonedInfoMessage        
      </h3>
      <p>Reference number: @Model.VacancyReferenceNumber</p>
  </div>
</div>

@if (Model.Status == VacancyStatus.Rejected)
{
    <div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
        <div class="govuk-notification-banner__header">
            <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                Important
            </h2>
        </div>
        <div class="govuk-notification-banner__content">
            <p class="govuk-notification-banner__heading">
                <esfaFeatureEnabled name="@FeatureNames.MultipleLocations">
                    @Model.OrganisationName has rejected this vacancy for the following reason.
                </esfaFeatureEnabled>
                <esfaFeatureDisabled name="@FeatureNames.MultipleLocations">
                    @Model.EmployerName has rejected this vacancy for the following reason.
                </esfaFeatureDisabled>
            </p>
            <p class="govuk-body">@Model.EmployerRejectedReason</p>
        </div>
    </div>
}

@if (Model.Status == VacancyStatus.Referred)
{
    <div class="govuk-error-summary review-summary govuk-!-margin-top-0" role="alert" tabindex="-1">
        <h2 class="govuk-error-summary__title">
            Edits needed
        </h2>
        <div class="govuk-error-summary__body">
            <p class="govuk-body">Call us on @RecruitViewConstants.HelpdeskPhoneNumber and select the training provider option if you need to discuss any of our vacancy review comments.</p>
            <p class="govuk-body app-preserve-line-breaks">@Model.Review.ReviewerComments</p>
            <ul class="govuk-list govuk-error-summary__list">
                @foreach (var fieldIndicator in Model.Review.FieldIndicators)
                {
                    if (!string.IsNullOrWhiteSpace(fieldIndicator.ManualQaText))
                    {
                        <li><a asp-fragment="@fieldIndicator.Anchor" class="govuk-link">@fieldIndicator.ManualQaText</a></li>
                    }

                    foreach (var errorText in fieldIndicator.AutoQaTexts)
                    {
                        <li><a asp-fragment="@fieldIndicator.Anchor" class="govuk-link">@errorText</a></li>
                    }
                }
            </ul>
        </div>
    </div>
}

