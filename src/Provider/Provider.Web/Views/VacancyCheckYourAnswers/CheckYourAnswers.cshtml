                <dd class="govuk-summary-list__value">
                    <div class="app-ugc-wrap">
                        @Html.Raw(Model.VacancyDescription)
                    </div>
                    <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.VacancyDescription" tag-name="strong" model="@Model"/>
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.VacancyDescription_Index_Get" asp-all-route-data="@Model.RouteDictionary">Change<span class="govuk-visually-hidden"> about the apprenticeship</span></a>
                </dd>
            </div>
            <div class="govuk-summary-list__row govuk-summary-list--no-border">
                <dt-review-section section-state="@Model.TrainingDescriptionSectionState">Training and qualification levels</dt-review-section>
                <dd class="govuk-summary-list__value">
                    <div class="app-ugc-wrap">
                        @Html.Raw(Model.TrainingDescription)
                    </div>
                    <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.TrainingDescription" tag-name="strong" model="@Model"/>
                </dd>
                <dd class="govuk-summary-list__actions">
                
                </dd>
            </div>
        </dl>
        <h2 class="govuk-heading-m">Employment details</h2>
        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
            <div class="govuk-summary-list__row govuk-summary-list--no-border">
