@using Esfa.Recruit.Vacancies.Client.Domain.Entities
@using Esfa.Recruit.Shared.Web.Mappers
@model Esfa.Recruit.Provider.Web.ViewModels.VacancyPreview.VacancyPreviewViewModel

@{
    ViewBag.GaData.Vpv = "/recruitment/provider/check-your-answers";
    ViewBag.Title = "Check your answers before submitting your vacancy";
}

@section BackLink {
    <a asp-route="@RouteNames.ProviderTaskListGet" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-back" class="govuk-back-link">Back to task list</a>
}

@if (Model.Status == VacancyStatus.Rejected)
{
    <div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
        <div class="govuk-notification-banner__header">
            <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                Important
            </h2>
        </div>
        <div class="govuk-notification-banner__content">
            <p class="govuk-notification-banner__heading">
                @Model.EmployerName has rejected this vacancy for the following reason.
            </p>
            <p class="govuk-body">@Model.EmployerRejectedReason</p>
        </div>
    </div>
}

@if (Model.Status == VacancyStatus.Referred)
{
    <div class="govuk-error-summary review-summary govuk-!-margin-top-0" role="alert" tabindex="-1">
        <h2 class="govuk-error-summary__title">
            Edits needed
        </h2>
        <div class="govuk-error-summary__body">
            <p class="govuk-body">Call us on @RecruitViewConstants.HelpdeskPhoneNumber and select the training provider option if you need to discuss any of our vacancy review comments.</p>
            <p class="govuk-body">@Model.Review.ReviewerComments</p>    
            <ul class="govuk-list govuk-error-summary__list">
                @foreach (var fieldIndicator in Model.Review.FieldIndicators)
                {
                    if (!string.IsNullOrWhiteSpace(fieldIndicator.ManualQaText))
                    {
                        <li><a asp-fragment="@fieldIndicator.Anchor" class="govuk-link">@fieldIndicator.ManualQaText</a></li>
                    }

                    foreach (var errorText in fieldIndicator.AutoQaTexts)
                    {
                        <li><a asp-fragment="@fieldIndicator.Anchor" class="govuk-link">@errorText</a></li>
                    }
                }
            </ul>
        </div>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">  
        <h1 class="govuk-heading-l">
            Check your answers before submitting your vacancy
        </h1>
        <h2 class="govuk-heading-m">Vacancy summary</h2>
        <dl class="govuk-summary-list govuk-!-margin-bottom-9 app-check-answers">
            <div class="govuk-summary-list__row">
                <dt-review-section section-state="@Model.TitleSectionState">Vacancy title</dt-review-section>
                <dd class="govuk-summary-list__value">
                    @Model.Title
                    <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.Title" tag-name="strong" model="@Model"/>
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.Title_Get" asp-all-route-data="@Model.RouteDictionary">Change<span class="govuk-visually-hidden"> vacancy title</span></a>
                </dd>
            </div>
            @if (Model.AccountLegalEntityCount > 1)
            {
                <div class="govuk-summary-list__row">
                    <dt-review-section section-state="@Model.EmployerNameSectionState">Name of organisation</dt-review-section>
                    <dd class="govuk-summary-list__value">
                        @Model.EmployerName
                        <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.EmployerName" tag-name="strong" model="@Model"/>
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.LegalEntity_Get" asp-all-route-data="@Model.RouteDictionary">Change<span class="govuk-visually-hidden"> legal entity</span></a>
                    </dd>
                </div>   
            }
            <div class="govuk-summary-list__row">
