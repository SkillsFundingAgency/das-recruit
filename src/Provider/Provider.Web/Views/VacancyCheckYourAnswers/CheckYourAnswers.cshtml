            <dt class="app-summary-list__key" id="@FieldIdentifiers.EmployerDescription">Employer information</dt>
            <dd class="app-summary-list__value">
                @Model.EmployerDescription
                <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.EmployerDescription" tag-name="strong" model="@Model"/>
            </dd>
            <dd class="app-summary-list__actions">
                <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.AboutEmployer_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="change-nameoforg">Change<span class="govuk-visually-hidden"> name of organisation</span></a>
            </dd>
        </div>
        <field-review-message field-name="@FieldIdentifiers.EmployerWebsiteUrl" model="@Model"></field-review-message>
        <div class="app-summary-list__row app-summary-list__row--no-border" field-review-marker="EmployerWebsiteUrl">
            <dt class="app-summary-list__key" id="@FieldIdentifiers.EmployerWebsiteUrl">Organisation website (optional)</dt>
            <dd class="app-summary-list__value">
                @(Model.HasEmployerWebsiteUrl ? Model.EmployerWebsiteUrl : "None")
                <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.EmployerWebsiteUrl" tag-name="strong" model="@Model"/>
            </dd>
            <dd class="app-summary-list__actions">
                    
            </dd>
        </div>
        <field-review-message field-name="@FieldIdentifiers.DisabilityConfident" model="@Model"></field-review-message>
        <div class="app-summary-list__row" field-review-marker="IsDisabilityConfident">
            <dt class="app-summary-list__key" id="@FieldIdentifiers.DisabilityConfident">Disability Confident Employer?</dt>
            <dd class="app-summary-list__value">
                @(Model.IsDisabilityConfident ? "Yes" : "No")
                <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.DisabilityConfident" tag-name="strong" model="@Model"/>
            </dd>
            <dd class="app-summary-list__actions">
                    
            </dd>
        </div>
        <field-review-message field-name="@FieldIdentifiers.ProviderContact" model="@Model"></field-review-message>
        <div class="app-summary-list__row app-summary-list__row--no-border" field-review-marker="ProviderContactName">
            <dt class="app-summary-list__key"  id="@FieldIdentifiers.ProviderContact">Contact name (optional)</dt>
            <dd class="app-summary-list__value">
                @(Model.HasProviderContactName ? Model.ProviderContactName : "None")
                <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.ProviderContact" tag-name="strong" model="@Model"/>
            </dd>
            <dd class="app-summary-list__actions">
                <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.ProviderContactDetails_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="change-contactdetails">Change<span class="govuk-visually-hidden"> contact details</span></a>
            </dd>
        </div>
        <div class="app-summary-list__row app-summary-list__row--no-border" field-review-marker="ProviderContactEmail">
            <dt class="app-summary-list__key"  id="@FieldIdentifiers.ProviderContact">Contact email (optional)</dt>
            <dd class="app-summary-list__value">
                @(Model.HasProviderContactEmail ? Model.ProviderContactEmail : "None")
                <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.ProviderContact" tag-name="strong" model="@Model"/>
            </dd>
            <dd class="app-summary-list__actions">
            </dd>
        </div>
            
        <div class="app-summary-list__row" field-review-marker="ProviderContactTelephone">
            <dt class="app-summary-list__key" id="@FieldIdentifiers.ProviderContact">Contact number (optional)</dt>
            <dd class="app-summary-list__value">
                @(Model.HasProviderContactTelephone ? Model.ProviderContactTelephone : "None")
                <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.ProviderContact" tag-name="strong" model="@Model"/>
            </dd>
            <dd class="app-summary-list__actions">
                    
            </dd>
        </div>
            
        
        <field-review-message field-name="@FieldIdentifiers.ApplicationMethod" model="@Model"></field-review-message>
        <field-review-message field-name="@FieldIdentifiers.ApplicationUrl" model="@Model"></field-review-message>
        <div class="app-summary-list__row app-summary-list__row--no-border" field-review-marker="ApplicationMethod">
            <dt class="app-summary-list__key" id="@FieldIdentifiers.ApplicationMethod">Application website</dt>
            <dd class="app-summary-list__value" id="@FieldIdentifiers.ApplicationUrl">
                @if (Model.ApplicationMethod == ApplicationMethod.ThroughExternalApplicationSite)
                {
                        <span class="das-breakable">@Model.ApplicationUrl</span>
                }
                else
                {
                    @Model.FindAnApprenticeshipUrl
                }
                <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.ApplicationUrl" tag-name="strong" model="@Model"/>
                <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.ApplicationMethod" tag-name="strong" model="@Model"/>
            </dd>
            <dd class="app-summary-list__actions">
                <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.ApplicationProcess_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="change-applicationprocess">Change<span class="govuk-visually-hidden"> application process</span></a>
            </dd>
        </div>
        @if (Model.HasApplicationInstructions)
        {
            <div class="app-summary-list__row" field-review-marker="ApplicationInstructions">
                <dt class="app-summary-list__key" id="@FieldIdentifiers.ApplicationInstructions">Explain the application process (optional)</dt>
                <dd class="app-summary-list__value">
                    @(Model.HasApplicationInstructions ? Model.ApplicationInstructions : "None")
                    <review-field class="govuk-tag--purple" field-name="@FieldIdentifiers.ApplicationInstructions" tag-name="strong" model="@Model"/>
                </dd>
                <dd class="app-summary-list__actions">
                        
                </dd>
            </div>
        }
    </dl>

    <h2 class="govuk-heading-m">Application</h2>
    <dl class="app-summary-list govuk-!-margin-bottom-9">
        <div class="app-summary-list__row app-summary-list__row--no-border">
            <dt class="app-summary-list__key">Question 1</dt>
            <dd class="app-summary-list__value">@(Model.ApprenticeshipType.IsFoundation() ? "What interests you about this apprenticeship?" : "What are your skills and strengths?")</dd>
            <dd class="app-summary-list__actions"></dd>
        </div>
        @if (!Model.ApprenticeshipType.IsFoundation())
        {
            <div class="app-summary-list__row app-summary-list__row--no-border">
                <dt class="app-summary-list__key">Question 2</dt>
                <dd class="app-summary-list__value">What interests you about this apprenticeship?</dd>
                <dd class="app-summary-list__actions"></dd>
            </div>
        }
        <field-review-message field-name="@FieldIdentifiers.AdditionalQuestion1" model="@Model"></field-review-message>
        <div class="app-summary-list__row app-summary-list__row--no-border" field-review-marker="AdditionalQuestion1">
            <dt class="app-summary-list__key" id="@FieldIdentifiers.AdditionalQuestion1">Question @(Model.AdditionalQuestionCount - 1)</dt>
            <dd class="app-summary-list__value">
                @(Model.HasAdditionalQuestion1 ? Model.AdditionalQuestion1 : "None")
                <field-review-tag class="govuk-tag--orange" field-name="@FieldIdentifiers.AdditionalQuestion1" tag-name="strong" model="@Model"/>
            </dd>
            <dd class="app-summary-list__actions">
                <a class="govuk-link govuk-link--no-visited-state" asp-route="@RouteNames.AdditionalQuestions_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="change-additional-question-1">Change<span class="govuk-visually-hidden"> additional questions</span></a>
            </dd>
        </div>
        <field-review-message field-name="@FieldIdentifiers.AdditionalQuestion2" model="@Model"></field-review-message>
        <div class="app-summary-list__row" field-review-marker="AdditionalQuestion2">
            <dt class="app-summary-list__key" id="@FieldIdentifiers.AdditionalQuestion2">Question @Model.AdditionalQuestionCount</dt>
            <dd class="app-summary-list__value">
                @(Model.HasAdditionalQuestion2 ? Model.AdditionalQuestion2 : "None")
                <field-review-tag class="govuk-tag--orange" field-name="@FieldIdentifiers.AdditionalQuestion2" tag-name="strong" model="@Model"/>
            </dd>
            <dd class="app-summary-list__actions">
            </dd>
        </div>
    </dl>
    

    <h2 class="govuk-heading-m">Now submit your vacancy</h2>
        <p class="govuk-body">By submitting this vacancy you are confirming that, to the best of your knowledge, the details you are providing are correct.</p>
        <div class="govuk-warning-text">
            <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
            <strong class="govuk-warning-text__text">
                <span class="govuk-warning-text__assistive">Advice</span>
                Proofread your vacancy for spelling and formatting to avoid it being rejected by our <abbr title="Quality assurance">QA</abbr> team.
            </strong>
        </div>
        <p class="govuk-body"><a asp-route="@RouteNames.Vacancy_Advert_Preview_Get" asp-all-route-data="@Model.RouteDictionary" class="govuk-link govuk-link--no-visited-state">Preview vacancy before submitting</a></p>
        <form asp-route="@RouteNames.ProviderCheckYourAnswersPost" asp-all-route-data="@Model.RouteDictionary">
            <div class="govuk-button-group">    
                <input asp-for="HasUserConfirmation" value="true" type="hidden" />
                <button type="submit" class="govuk-button save-button" esfa-automation="continue-button">@Model.SubmitButtonText</button>
                <a asp-route="@RouteNames.Dashboard_Get" asp-route-ukprn="@Model.Ukprn" esfa-automation="link-cancel" class="govuk-link govuk-link--no-visited-state">Cancel</a>
            </div>
        </form>
  
        <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

        <p class="govuk-heading-s">No longer need this vacancy?</p>
        <a asp-route="@RouteNames.DeleteVacancy_Get" asp-all-route-data="@Model.RouteDictionary" class="govuk-button govuk-button--warning" esfa-automation="delete-button">Delete vacancy</a>
          
    </div>
</div>