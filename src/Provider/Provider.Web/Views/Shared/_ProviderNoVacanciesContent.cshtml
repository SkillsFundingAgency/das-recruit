@using Microsoft.Extensions.Options
@model Esfa.Recruit.Provider.Web.RouteModel.VacancyRouteModel
@inject IOptions<ExternalLinksConfiguration> ExternalLinks

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Create a vacancy for Find an apprenticeship</h1>

        <p class="govuk-body">
            Advertise an apprenticeship in England on
            <a href="@ExternalLinks.Value.FindAnApprenticeshipUrl" class="govuk-link govuk-link--no-visited-state" target="_blank">Find an apprenticeship (opens in a new tab)</a>.
            You can accept applications using Find an apprenticeship or add a link to your own application website.
        </p>

        <h2 class="govuk-heading-m">Before you start</h2>

        <p class="govuk-body">Make sure you have:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>
                <a asp-external-subdomain="securefunding" asp-external-action="manage" asp-external-controller="reservations" asp-external-id="@Model.Ukprn" class="govuk-link">reserved funding</a>
                if the employer you're working with does not pay the apprenticeship levy
            </li>
            <li>got details such as the apprenticeship's wage and working hours</li>
        </ul>

        <a asp-route="@RouteNames.LegalEntityEmployer_Get" asp-all-route-data="@Model.RouteDictionary" role="button" class="govuk-button govuk-button--start govuk-!-margin-bottom-8 govuk-!-margin-top-2" esfa-automation="create-vacancy">
            Create vacancy
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
            </svg>
        </a>
        
        <h2 class="govuk-heading-m govuk-!-margin-bottom-2">Create adverts on your own system using our APIs</h2>

        <p class="govuk-body">
            If you're working with a software developer, you can connect your system to Find an apprenticeship by 
            <a asp-route="@RouteNames.Dashboard_ProviderRecruitmentApi" asp-route-ukprn="@Model.Ukprn" class="govuk-link">using our APIs</a>.
        </p>
    </div>
</div>
