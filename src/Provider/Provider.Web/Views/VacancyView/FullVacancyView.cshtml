@model DisplayVacancyViewModel

@{
    ViewBag.GaData.Vpv = "/recruitment/provider/page-edit-view-vacancy-full";
    ViewBag.Title = "View vacancy";
}

@section BackLink {
  <a asp-route="@RouteNames.VacancyManage_Get" asp-all-route-data="@Model.RouteDictionary" esfa-automation="link-back" class="govuk-back-link">Back</a>
}


<h1 class="govuk-heading-l">View your vacancy</h1>

@if (_serviceParameters.VacancyType.GetValueOrDefault() == VacancyType.Apprenticeship)
{
    <partial name="_vacancyApprenticeshipPreview" model="@Model" />    
}
else
{
    <partial name="_vacancyTraineeshipPreview" model="@Model" />
}

