@model Esfa.Recruit.Provider.Web.ViewModels.VacancyView.ReviewVacancyViewModel

@{
    ViewBag.GaData.Vpv = "/recruitment/provider/page-edit-view-vacancy-review";
}

<div class="warning-summary">
    <p class="govuk-body">This vacancy is with <span class="govuk-!-font-weight-bold">@Model.AccountName</span> for review. <br>You can only edit this vacancy if they reject it.</p>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl" id="vacancy-header">
            @Model.Title
            <span class="heading-secondary">@Model.EmployerName</span>
        </h1>
    </div>
    <div class="govuk-grid-column-one-third">
        <div class="govuk-!-margin-top-6">Submitted for review on @Model.ReviewDate</div>
    </div>
</div>

<partial name="@PartialNames.NonEditableVacancyDisplay" model="Model" />

<div class="govuk-form-group inline">
    <div class="govuk-form-group govuk-!-margin-top-6">
        <a asp-route="@RouteNames.Vacancies_Get" class="govuk-button">Return to dashboard</a>
    </div>
</div>