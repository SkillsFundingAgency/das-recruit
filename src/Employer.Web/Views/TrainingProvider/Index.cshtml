@model Esfa.Recruit.Employer.Web.ViewModels.TrainingProvider.IndexViewModel

<div class="grid-row">
    <div class="column-two-thirds">

        <div asp-validation-summary="All" class="error-summary" role="alert" aria-labelledby="error-summary-heading-example-1" tabindex="-1">
            <h2 class="heading-medium error-summary-heading" id="error-summary-heading-example-1">
                Please fix these errors
            </h2>
        </div>

        <h1 class="heading-large">@Model.Title</h1>
        <h1 class="heading-large">Add training provider</h1>

        @if (Model.HasSelectedTrainingTrainingProvider)
        {
            <div class="verification-summary">
                <h2 class="heading-medium error-summary-heading" id="verification-summary-heading-example-1">
                    Selected training provider
                </h2>
                
                <h3 class="heading-small">93 Hackney Rd, London, EC1V 3QJ</h3>
                <h3 class="heading-small">UKPRN: @Model.Ukprn</h3>
            </div>
        }

        <form asp-route="@RouteNames.TrainingProvider_Index_Post">
            <div class="form-group">
                <label asp-for="Ukprn" class="form-label-bold">Enter UK Provider Reference Number (UKPRN)</label>
                <span class="form-hint">
                    You will be able to get this from your training provider<br>
                    Your provider must also have a recruit an apprentice account
                </span>
                <input asp-for="Ukprn" type="text" class="form-control" maxlength="8" />
                <input type="submit" value="Select" class="button" />
            </div>
            <div class="form-group">
                <a asp-route="@RouteNames.Sections_Index_Get" class="button-link">Return to vacancy</a>

                @if (Model.HasSelectedTrainingTrainingProvider)
            {
                <a asp-route="@RouteNames.WageAndhours_Index_Get" class="button">Continue</a>
        }

            </div>
        </form>
    </div>
</div>